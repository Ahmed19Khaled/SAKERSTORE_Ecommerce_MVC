@model ShopApp.Models.Order
@{
    string GetStatusColor(string status)
    {
        return status switch
        {
            "Pending" => "#f7e600",
            "Processing" => "#007bff",
            "Shipped" => "#0dcaf0",
            "Delivered" => "#28a745",
            "FailedDelivery" => "#dc3545",
            "Cancelled" => "#6c757d",
            _ => "#ffffff"
        };
    }

    string statusClass = Model.Status switch
    {
        "Pending" => "bg-warning text-dark",
        "Processing" => "bg-primary",
        "Shipped" => "bg-info text-dark",
        "Delivered" => "bg-success",
        "FailedDelivery" => "bg-danger",
        "Cancelled" => "bg-secondary",
        _ => "bg-light text-dark"
    };

    string statusIcon = Model.Status switch
    {
        "Pending" => "⏳",
        "Processing" => "⚙️",
        "Shipped" => "🚚",
        "Delivered" => "✅",
        "FailedDelivery" => "❌",
        "Cancelled" => "🚫",
        _ => ""
    };
}


<div class="container mt-5">
    <div class="card shadow-lg rounded-4 border-0">
        <div class="card-body p-4">
            <h2 class="text-center mb-4 text-success">✅ Order Confirmed</h2>

            <div class="row row-cols-1 row-cols-md-2 g-4 mb-4">
                <!-- Customer Info -->
                <div class="col">
                    <div class="border p-3 rounded bg-white shadow-sm h-100">
                        <h6 class="mb-3 text-primary">📌 Customer Information</h6>
                        <p><strong>Full Name:</strong> @Model.FullName</p>
                        <p><strong>Phone Number:</strong> @Model.PhoneNumber</p>
                        <p><strong>Address:</strong> @Model.Address, @Model.City, @Model.Country</p>
                    </div>
                </div>

                <!-- Order Details -->
                <div class="col">
                    <div class="border p-3 rounded bg-white shadow-sm h-100">
                        <h6 class="mb-3 text-primary">🧾 Order Details</h6>
                        <p><strong>Order ID:</strong> #@Model.Id</p>
                        <p><strong>Order Date:</strong> @Model.OrderDate.ToString("yyyy/MM/dd - hh:mm tt")</p>

                        <p>
                            <strong>Status:</strong>
                            <span class="badge @statusClass p-2">@statusIcon @Model.Status</span>
                        </p>

                        <form asp-action="EditStatuse" onsubmit="return confirm('Are you sure you want to delete this category?');" method="post" class="d-flex align-items-center">
                            <input type="hidden" name="id" value="@Model.Id" />

                            <select id="statusSelect" name="status" class="form-select me-2 text-white fw-bold" style="background-color:@GetStatusColor(Model.Status)">
                                <option value="@Model.Status" selected disabled hidden>@Model.Status</option>
                                <option value="Pending">⏳ Pending</option>
                                <option value="Cancelled">🚫 Cancelled</option>
                            </select>

                            <button type="submit" class="btn btn-sm btn-outline-success">Change</button>
                        </form>

                        <p class="mt-3"><strong>Total Amount:</strong> @Model.TotalAmount.ToString("C")</p>
                    </div>
                </div>
            </div>

            <!-- Ordered Products -->
            <h6 class="text-info mb-3">📦 Ordered Products</h6>
            <div class="table-responsive">
                <table class="table table-bordered table-striped table-sm">
                    <thead class="table-light text-center">
                        <tr>
                            <th>Product</th>
                            <th>Price</th>
                            <th>Qty</th>
                            <th>Image</th>
                            <th>Color</th>
                            <th>Total</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.Items)
                        {
                            <tr class="text-center align-middle">
                                <td>@item.Product.Name</td>
                                <td>@item.UnitPrice.ToString("C")</td>
                                <td>@item.Quantity</td>
                                <td>
                                    <img class="card-img-top"
                                         src="/ImgePro/@(item.Product.Images != null && item.Product.Images.Any() ? item.Product.Images.First().ImageURL : "no-image.jpg")"
                                         alt="@item.Product.Name"
                                         style="height: 80px; width:90px; object-fit: fill;" />
                                </td>
                                <td>
                                @if (item.Stock != null)
                                {
                                   <div class="m-auto" style="background:@item.Stock.Color;width:80px;height:30px ">

                                   </div>
                                }
                                else
                                {
                                    <span class="text-muted">No Color</span>
                                    }
                                </td>
                                <td>@(item.Quantity* item.UnitPrice)</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            <div class="text-center mt-4">
                <a href="@Url.Action("Index", "Home")" class="btn btn-success px-4">🔙 Back to Home</a>
            </div>
        </div>
    </div>
</div>

<!-- JavaScript to Dynamically Change Select Background -->
<script>
    document.addEventListener("DOMContentLoaded", function () {
        const select = document.getElementById("statusSelect");

        const colors = {
            "Pending": "#f7e600",
            "Processing": "#007bff",
            "Shipped": "#0dcaf0",
            "Delivered": "#28a745",
            "FailedDelivery": "#dc3545",
            "Cancelled": "#6c757d"
        };

        function updateSelectColor() {
            const value = select.value;
            if (colors[value]) {
                select.style.backgroundColor = colors[value];
                select.style.color = (value === "Pending" || value === "Shipped") ? "#000" : "#fff";
            } else {
                select.style.backgroundColor = "#ffffff";
                select.style.color = "#000";
            }
        }

        select.addEventListener("change", updateSelectColor);
        updateSelectColor(); // On load
    });
</script>