@model ShopApp.Models.Order
@{
    // ---------- Helper functions (preserved) ----------
    string GetStatusColor(string status) => status switch
    {
        "Pending" => "#fab005",
        "Processing" => "#1c7ed6",
        "Shipped" => "#0dcaf0",
        "Delivered" => "#2f9e44",
        "FailedDelivery" => "#e03131",
        "Cancelled" => "#868e96",
        _ => "#ffffff"
    };

    string GetStatusBadgeClass(string status) => status switch
    {
        "Pending" => "bg-warning text-dark",
        "Processing" => "bg-primary text-white",
        "Shipped" => "bg-info text-dark",
        "Delivered" => "bg-success text-white",
        "FailedDelivery" => "bg-danger text-white",
        "Cancelled" => "bg-secondary text-white",
        _ => "bg-light text-dark"
    };

    string statusIcon = Model.Status switch
    {
        "Pending" => "⏳",
        "Processing" => "⚙️",
        "Shipped" => "🚚",
        "Delivered" => "✅",
        "FailedDelivery" => "❌",
        "Cancelled" => "🚫",
        _ => ""
    };

    // Helper to determine which steps are complete for the stepper
    bool IsStepCompleted(string stepStatus)
    {
        var orderStatus = Model.Status;
        if (stepStatus == "Pending") return true;
        if (stepStatus == "Processing") return orderStatus == "Processing" || orderStatus == "Shipped" || orderStatus == "Delivered";
        if (stepStatus == "Shipped") return orderStatus == "Shipped" || orderStatus == "Delivered";
        if (stepStatus == "Delivered") return orderStatus == "Delivered";
        return false;
    }
}

