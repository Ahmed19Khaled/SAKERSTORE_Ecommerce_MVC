<!-- 🎨 DYNAMIC SELECT COLOR SCRIPT (enhanced) -->
<script>
    (function() {
        "use strict";
        const select = document.getElementById('statusSelect');
        if (!select) return;

        const colorMap = {
            "Pending": "#fab005",
            "Processing": "#1c7ed6",
            "Shipped": "#0dcaf0",
            "Delivered": "#2f9e44",
            "FailedDelivery": "#e03131",
            "Cancelled": "#868e96"
        };

        function updateSelectStyle() {
            const value = select.value;
            if (colorMap[value]) {
                select.style.backgroundColor = colorMap[value];
                select.style.color = (value === "Pending" || value === "Shipped") ? "#000" : "#fff";
            } else {
                select.style.backgroundColor = "#ffffff";
                select.style.color = "#212529";
            }
        }

