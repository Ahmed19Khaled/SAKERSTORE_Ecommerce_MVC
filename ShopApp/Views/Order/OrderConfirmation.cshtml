<div class="order-pro">

    <!-- ✅ HEADER : SUCCESS + ORDER ID -->
    <div class="order-header">
        <div class="order-header__title">
            <span class="order-header__icon">
                <i class="bi bi-check-lg"></i>
            </span>
            <h1>Order confirmed</h1>
        </div>
        <div class="order-id-badge">
            <i class="bi bi-hash"></i> @Model.Id
        </div>
    </div>

    <!-- ✅ TWO COLUMN INFO CARDS -->
    <div class="info-grid">
        <!-- CUSTOMER INFO -->
        <div class="info-card">
            <div class="card-header">
                <i class="bi bi-person-circle"></i>
                <h5>Customer</h5>
            </div>
            <div class="info-row">
                <span class="info-label">Full name</span>
                <span class="info-value">@Model.FullName</span>
            </div>
            <div class="info-row">
                <span class="info-label">Phone</span>
                <span class="info-value">@Model.PhoneNumber</span>
            </div>
            <div class="info-row">
                <span class="info-label">Address</span>
                <span class="info-value">@Model.Address, @Model.City, @Model.Country</span>
            </div>
        </div>

        <!-- ORDER DETAILS + STATUS UPDATER -->
        <div class="info-card">
            <div class="card-header">
                <i class="bi bi-receipt"></i>
                <h5>Order details</h5>
            </div>
            <div class="info-row">
                <span class="info-label">Date</span>
                <span class="info-value">@Model.OrderDate.ToString("yyyy/MM/dd • HH:mm")</span>
            </div>
            <div class="info-row">
                <span class="info-label">Status</span>
                <span class="info-value">
                    <span class="badge @GetStatusBadgeClass(Model.Status) p-2" style="font-size:0.9rem;">
                        @statusIcon @Model.Status
                    </span>
                </span>
            </div>
            <div class="info-row">
                <span class="info-label">Total</span>
                <span class="info-value total-amount-highlight">@Model.TotalAmount.ToString("C")</span>
            </div>

            <!-- 📌 PROFESSIONAL STATUS STEPPER (visual progress) -->
            <div class="status-stepper">
                <div class="step @(IsStepCompleted("Pending") ? "completed" : "") @(Model.Status == "Pending" ? "active" : "")">
                    <span class="step-icon">1</span>
                    <span class="step-label">Pending</span>
                </div>
                <div class="step @(IsStepCompleted("Processing") ? "completed" : "") @(Model.Status == "Processing" ? "active" : "")">
                    <span class="step-icon">2</span>
                    <span class="step-label">Processing</span>
                </div>
                <div class="step @(IsStepCompleted("Shipped") ? "completed" : "") @(Model.Status == "Shipped" ? "active" : "")">
                    <span class="step-icon">3</span>
                    <span class="step-label">Shipped</span>
                </div>
                <div class="step @(IsStepCompleted("Delivered") ? "completed" : "") @(Model.Status == "Delivered" ? "active" : "")">
                    <span class="step-icon">4</span>
                    <span class="step-label">Delivered</span>
                </div>
            </div>

            <!-- 🎛️ STATUS CHANGE FORM – clean and dynamic -->
            <form asp-action="EditStatuse" method="post" onsubmit="return confirm('Update order status?');">
                <input type="hidden" name="id" value="@Model.Id" />
                <div class="status-control">
                    <div class="status-select-wrapper">
                        <select id="statusSelect" name="status" class="custom-status-select" style="background-color: @GetStatusColor(Model.Status); color: @(Model.Status == "Pending" || Model.Status == "Shipped" ? "#000" : "#fff");">
                            <option value="@Model.Status" selected disabled hidden>@Model.Status</option>
                            <option value="Pending">⏳ Pending</option>
                            <option value="Cancelled">🚫 Cancelled</option>
                        </select>
                    </div>
                    <button type="submit" class="btn-update-status">
                        <i class="bi bi-check2"></i> Update
                    </button>
                </div>
            </form>
        </div>
    </div>

    <!-- 📦 PRODUCTS TITLE -->
    <div class="products-title">
        <i class="bi bi-box-seam"></i>
        <h3>Products in this order</h3>
    </div>

    <!-- 🖥️ DESKTOP TABLE (appears from 900px) -->
    <table class="product-table">
        <thead>
            <tr>
                <th>Product</th>
                <th>Price</th>
                <th>Qty</th>
                <th>Image</th>
                <th>Color</th>
                <th>Total</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Items)
            {
                <tr>
                    <td class="fw-semibold">@item.Product.Name</td>
                    <td>@item.UnitPrice.ToString("C")</td>
                    <td>@item.Quantity</td>
                    <td>
                        <a asp-action="DetailsProduct" asp-controller="Product" asp-route-ProductID="@item.ProductId" target="_blank">
                            <img class="product-thumb"
                                 src="/ImgePro/@(item.Product.Images != null && item.Product.Images.Any() ? item.Product.Images.First().ImageURL : "no-image.jpg")"
                                 alt="@item.Product.Name" />
                        </a>
                    </td>
                    <td>
                        @if (item.Stock != null)
                        {
                            <div class="color-swatch" style="background: @item.Stock.Color;"></div>
                        }
                        else
                        {
                            <span class="text-muted">—</span>
                        }
                    </td>
                    <td style="color: var(--primary-dark); font-weight: 700;">@((item.Quantity * item.UnitPrice).ToString("C"))</td>
                </tr>
            }
        </tbody>
    </table>

    <!-- 📱 MOBILE / TABLET PRODUCT GRID (2 cols → 1 col) -->
    <div class="product-grid">
        @foreach (var item in Model.Items)
        {
            <div class="product-card">
                <a asp-action="DetailsProduct" asp-controller="Product" asp-route-ProductID="@item.ProductId">
                    <img class="product-card-img"
                         src="/ImgePro/@(item.Product.Images != null && item.Product.Images.Any() ? item.Product.Images.First().ImageURL : "no-image.jpg")"
                         alt="@item.Product.Name" />
                </a>
                <div class="product-card-title">@item.Product.Name</div>
                <div class="product-card-meta">
                    <span>@item.UnitPrice.ToString("C")</span>
                    <span>× @item.Quantity</span>
                    @if (item.Stock != null)
                    {
                        <span class="d-flex align-items-center gap-1">
                            <span class="color-swatch-sm" style="background: @item.Stock.Color;"></span>
                        </span>
                    }
                </div>
                <div class="product-card-total">
                    @((item.Quantity * item.UnitPrice).ToString("C"))
                </div>
            </div>
        }
    </div>

    <!-- 🏠 BACK TO HOME BUTTON (with refined hover) -->
    <div class="d-flex justify-content-center mt-5">
        <a href="@Url.Action("Index", "Home")" class="back-home-btn">
            <i class="bi bi-house-door"></i> Back to home
        </a>
    </div>
