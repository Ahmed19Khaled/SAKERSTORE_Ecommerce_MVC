@model ShopApp.ViewModels.RegisterViewModel
@{
    ViewData["Title"] = "Create Account";
    Layout = null;
}

<link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800&display=swap" rel="stylesheet">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">

<style>
    /* ========== VARIABLES (Same as Login) ========== */
    :root {
        --primary: #680FEA; /* تغيير اللون الرئيسي للأخضر ليدل على "تسجيل جديد" */
        --primary-dark: #760BE7;
        --accent: #f1c40f;
        --danger: #e74c3c;
        --dark: #1e1e2f;
        --gray: #7f8c8d;
        --light: #05035A;
        --radius: 30px;
        --transition: all 0.3s cubic-bezier(0.25, 0.8, 0.25, 1);
    }

    /* ========== BASE STYLES ========== */
    * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
    }

    body {
        font-family: 'Inter', sans-serif;
        background: linear-gradient(135deg, #0f2027 0%, #203a43 50%, #2c5364 100%); /* خلفية داكنة مختلفة قليلاً */
       
        justify-content: center;
        padding: 1rem;
        color: var(--dark);
    }

    /* ========== CONTAINER ========== */
    .split-screen {
        display: flex;
        width: 100%;
        max-width: 1100px;
        margin: 2rem auto;
        min-height: 550px; /* أطول قليلاً من الدخول لاستيعاب الحقول */
        background: rgba(255, 255, 255, 0.98);
        border-radius: var(--radius);
        box-shadow: 0 25px 50px rgba(0, 0, 0, 0.25);
        overflow: hidden;
        animation: fadeIn 0.6s ease-out;
    }
    
    @@keyframes fadeIn {
        from {
            opacity: 0;
            transform: translateY(20px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    /* ========== LEFT SIDE (BRAND) ========== */
    .brand-side {
        flex: 0.8;
        background: linear-gradient(135deg, var(--primary),var(--primary-dark)), url('https://images.unsplash.com/photo-1556742049-0cfed4f7a07d?ixlib=rb-4.0.3&auto=format&fit=crop&w=1950&q=80');
        background-size: cover;
        background-position: center;
        padding: 3rem;
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        text-align: center;
        color: white;
        position: relative;
    }

    .brand-content h1 {
        font-size: 2.5rem;
        font-weight: 800;
        margin-bottom: 1rem;
        text-shadow: 0 2px 10px rgba(0,0,0,0.2);
    }

    .brand-content p {
        font-size: 1.1rem;
        opacity: 0.95;
        line-height: 1.6;
        max-width: 400px;
    }

    .brand-circles {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        overflow: hidden;
        pointer-events: none;
    }

    .circle {
        position: absolute;
        background: rgba(255,255,255,0.1);
        border-radius: 50%;
    }

    /* ========== RIGHT SIDE (FORM) ========== */
    .form-side {
        flex: 1.2;
        padding: 3rem;
        display: flex;
        flex-direction: column;
        justify-content: center;
        background: var(--light);
        overflow-y: auto; /* مهم للحقول الكثيرة */
    }

    .form-header {
        text-align: center;
        margin-bottom: 2rem;
    }

        .form-header h2 {
            font-size: 2rem;
            font-weight: 800;
            color: aliceblue ;
            margin-bottom: 0.5rem;
        }

        .form-header p {
            color: var(--gray);
            font-size: 0.95rem;
        }

        .form-header a {
            color: var(--primary);
            text-decoration: none;
            font-weight: 700;
            transition: var(--transition);
        }

            .form-header a:hover {
                text-decoration: underline;
            }

    /* ========== INPUTS ========== */
    .form-group {
        margin-bottom: 1.2rem;
    }

    .input-wrapper {
        position: relative;
    }

    .input-icon {
        position: absolute;
        left: 1.2rem;
        top: 50%;
        transform: translateY(-50%);
        color: var(--gray);
        font-size: 1.1rem;
        transition: var(--transition);
        z-index: 2;
    }

    .form-control {
        width: 100%;
        padding: 1rem 1rem 1rem 3.2rem;
        border: 2px solid #edf2f7;
        border-radius: 50px;
        font-size: 0.95rem;
        background: #fdfdfd;
        transition: var(--transition);
        color: var(--dark);
    }

        .form-control:focus {
            border-color: var(--primary);
            background: white;
            outline: none;
            box-shadow: 0 0 0 4px rgba(39, 174, 96, 0.1);
        }

            .form-control:focus + .input-icon {
                color: var(--primary);
            }

    .validation-message {
        display: block;
        color: var(--danger);
        font-size: 0.8rem;
        margin-top: 0.4rem;
        margin-left: 1.2rem;
        font-weight: 500;
    }

    /* ========== BUTTONS ========== */
    .btn-register {
        width: 100%;
        padding: 1rem;
        background: linear-gradient(135deg, var(--primary), var(--primary-dark));
        color: white;
        border: none;
        border-radius: 50px;
        font-weight: 700;
        font-size: 1rem;
        cursor: pointer;
        transition: var(--transition);
        box-shadow: 0 4px 15px rgba(39, 174, 96, 0.3);
        margin-top: 1rem;
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 0.5rem;
    }

        .btn-register:hover {
            transform: translateY(-3px);
            box-shadow: 0 8px 25px rgba(39, 174, 96, 0.4);
        }

    .divider {
        display: flex;
        align-items: center;
        color: var(--gray);
        font-size: 0.8rem;
        margin: 1.5rem 0;
        text-transform: uppercase;
        letter-spacing: 1px;
    }

        .divider::before, .divider::after {
            content: "";
            flex: 1;
            height: 1px;
            background: #eee;
        }

        .divider span {
            padding: 0 1rem;
        }

    /* Social Buttons */
    .social-grid {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 1rem;
    }

    .social-btn {
        padding: 0.8rem;
        border: 2px solid #edf2f7;
        background: white;
        border-radius: 15px;
        font-weight: 600;
        font-size: 0.9rem;
        cursor: pointer;
        transition: var(--transition);
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 0.5rem;
        color: var(--dark);
        width: 100%;
    }

        .social-btn:hover {
            background: #f8f9fa;
            border-color: #ddd;
            transform: translateY(-2px);
        }

        .social-btn.google i {
            color: #DB4437;
        }

        .social-btn.facebook i {
            color: #4267B2;
        }

    /* ========== RESPONSIVE ========== */
    @@media (max-width: 900px) {
        body {
            display: block; /* إلغاء التوسط العمودي */
            padding: 0;
            background: linear-gradient(135deg, #0f2027 0%, #203a43 50%, #2c5364 100%); /* خلفية داكنة مختلفة قليلاً */
        }

        .split-screen {
            flex-direction: column;
            border-radius: 0;
            box-shadow: none;
            min-height: 500px;
            width:400px;
            margin: auto auto;
            margin-top:3rem;
            background: linear-gradient(135deg, #0f2027 0%, #203a43 50%, #2c5364 100%); /* خلفية داكنة مختلفة قليلاً */
        }

        .brand-side {
            flex: 0 0 auto;
            padding: 2.5rem 1.5rem;
            min-height: auto;
            border-radius: 0 0 30px 30px; /* جمالية للحافة السفلية */
            display: none;
        }

        .brand-content h1 {
            font-size: 1.8rem;
        }

        .brand-content p {
            display: none;
        }
        /* إخفاء النص الطويل في الموبايل */

        .form-side {
            padding: 2rem 1.5rem;
            border-radius: 30px ;
        }

        .social-grid {
            grid-template-columns: 1fr;
        }
        /* الأزرار تحت بعض في الموبايل */
    }

    @@media (max-width: 400px) {
        .brand-side {
            padding: 1.5rem 1rem;
            border-radius: 0 0 20px 20px;
            display:none;
        }

        .form-header h2 {
            font-size: 1.5rem;
        }

        .form-control {
            font-size: 0.9rem;
            padding-left: 2.8rem;
        }

        .input-icon {
            left: 1rem;
            font-size: 1rem;
        }
    }
</style>

<div class="split-screen">
    <div class="brand-side">
        <div class="brand-circles">
            <div class="circle" style="top: -10%; left: -10%; width: 200px; height: 200px;"></div>
            <div class="circle" style="bottom: 10%; right: -5%; width: 150px; height: 150px;"></div>
        </div>
        <div class="brand-content">
            <h1>Join Our Community</h1>
            <p>Create an account today to get exclusive offers, track orders, and experience seamless shopping.</p>
        </div>
    </div>

    <div class="form-side">
        <div class="login-card">
            <div class="form-header">
                <h2 class="text-white" >Create Account</h2>
                <p>Already a member? <a asp-action="Login" asp-controller="Account">Log in here</a></p>
            </div>

            <form asp-action="Register" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <div class="form-group">
                    <div class="input-wrapper">
                        <i class="fas fa-user input-icon"></i>
                        <input asp-for="FullName" class="form-control" placeholder="Full Name" />
                    </div>
                    <span asp-validation-for="FullName" class="validation-message"></span>
                </div>

                <div class="form-group">
                    <div class="input-wrapper">
                        <i class="fas fa-envelope input-icon"></i>
                        <input asp-for="Email" class="form-control" placeholder="Email Address" type="email" />
                    </div>
                    <span asp-validation-for="Email" class="validation-message"></span>
                </div>

                <div class="form-group">
                    <div class="input-wrapper">
                        <i class="fas fa-lock input-icon"></i>
                        <input asp-for="Password" class="form-control" placeholder="Password" type="password" />
                    </div>
                    <span asp-validation-for="Password" class="validation-message"></span>
                </div>

                <div class="form-group">
                    <div class="input-wrapper">
                        <i class="fas fa-key input-icon"></i>
                        <input asp-for="ConfirmPassword" class="form-control" placeholder="Confirm Password" type="password" />
                    </div>
                    <span asp-validation-for="ConfirmPassword" class="validation-message"></span>
                </div>

                <button type="submit" class="btn-register">
                    Get Started <i class="fas fa-arrow-right"></i>
                </button>
            </form>

            <div class="divider">
                <span>Or sign up with</span>
            </div>

                <form asp-controller="Account" asp-action="ExternalLogin" method="post" style="width:100%">
                    <input type="hidden" name="provider" value="Google" />
                    <button type="submit" class="social-btn google w-100" title="Sign up with Google">
                        <i class="fab fa-google"></i> Google
                    </button>
                </form>

                @* <form asp-controller="Account" asp-action="ExternalLogin" method="post" style="width:100%">
                    <input type="hidden" name="provider" value="Facebook" />
                    <button type="submit" class="social-btn facebook" title="Sign up with Facebook">
                        <i class="fab fa-facebook-f"></i> Facebook
                    </button>
                </form> *@
            
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    @* validation *@
    <script> 
        function validatePasswordMatch() {
            var password = document.getElementById("Password").value;
            var confirmPassword = document.getElementById("ConfirmPassword").value;
            var messageElem = document.querySelector("[asp-validation-for='ConfirmPassword']");
            if (password !== confirmPassword) {
                messageElem.textContent = "Passwords do not match.";
            } else {
                messageElem.textContent = "";
            }
                }
                        document.getElementById("Password").addEventListener("input", validatePasswordMatch);
                                document.getElementById("ConfirmPassword").addEventListener("input", validatePasswordMatch);
                                </script>




}