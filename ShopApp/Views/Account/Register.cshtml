@model ShopApp.ViewModels.RegisterViewModel
@{
    ViewData["Title"] = "Create Account";
    Layout = null;
}

<!-- ===== VIEWPORT – الحل الأساسي لمشكلة صغر البطاقة ===== -->
<meta charset="utf-8">
<meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.5, user-scalable=yes">

<link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800&display=swap" rel="stylesheet">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">

<style>
    /* ========== VARIABLES – متناسقة مع صفحة الدخول ========== */
    :root {
        --primary: #680FEA;
        --primary-dark: #760BE7;
        --accent: #f1c40f;
        --danger: #e74c3c;
        --gray: #94a3b8;
        --light: #0a0c1a;
        --card-bg: rgba(15, 23, 42, 0.95);
        --text-light: #f1f5f9;
        --text-muted: #cbd5e1;
        --input-bg: rgba(255, 255, 255, 0.07);
        --input-border: rgba(255, 255, 255, 0.15);
        --input-focus-border: var(--primary);
        --radius-lg: 32px;
        --radius-md: 24px;
        --radius-sm: 20px;
        --transition: all 0.3s ease;
    }

    * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
    }

    body {
        font-family: 'Inter', sans-serif;
        background: radial-gradient(circle at 20% 30%, #0b0e1a, #03050b);
        min-height: 100vh;
        display: flex;
        align-items: center;
        justify-content: center;
        padding: 1rem;
    }

    /* ========== الحاوية المنقسمة – responsive ========== */
    .split-screen {
        display: flex;
        width: min(1100px, 95%); /* لا تتجاوز 1100px, وإلا 95% من الشاشة */
        background: var(--card-bg);
        backdrop-filter: blur(20px);
        -webkit-backdrop-filter: blur(20px);
        border: 1px solid rgba(255, 255, 255, 0.08);
        border-radius: var(--radius-lg);
        box-shadow: 0 25px 50px -8px rgba(0, 0, 0, 0.5);
        overflow: hidden;
        animation: fadeIn 0.6s ease-out;
    }

    @@keyframes fadeIn {
        from

    {
        opacity: 0;
        transform: translateY(20px);
    }

    to {
        opacity: 1;
        transform: translateY(0);
    }

    }

    /* ========== الجانب الأيمن (العلامة التجارية) ========== */
    .brand-side {
        flex: 0.9;
        background: linear-gradient(145deg, rgba(104, 15, 234, 0.9), rgba(118, 11, 231, 0.9)), url('https://images.unsplash.com/photo-1556742049-0cfed4f7a07d?ixlib=rb-4.0.3&auto=format&fit=crop&w=1950&q=80');
        background-size: cover;
        background-position: center;
        padding: 3rem 2rem;
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        text-align: center;
        color: white;
        position: relative;
    }

    .brand-content h1 {
        font-size: 2.5rem;
        font-weight: 800;
        margin-bottom: 1rem;
        text-shadow: 0 2px 15px rgba(0,0,0,0.3);
        line-height: 1.2;
    }

    .brand-content p {
        font-size: 1.1rem;
        opacity: 0.95;
        line-height: 1.6;
        max-width: 400px;
    }

    .brand-circles {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        overflow: hidden;
        pointer-events: none;
    }

    .circle {
        position: absolute;
        background: rgba(255,255,255,0.08);
        border-radius: 50%;
    }

    /* ========== الجانب الأيسر (نموذج التسجيل) ========== */
    .form-side {
        flex: 1.2;
        padding: 2.8rem 2.5rem;
        display: flex;
        flex-direction: column;
        justify-content: center;
        background: var(--card-bg);
    }

    .form-header {
        text-align: center;
        margin-bottom: 2rem;
    }

        .form-header h2 {
            font-size: 2rem;
            font-weight: 800;
            color: var(--text-light);
            margin-bottom: 0.5rem;
        }

        .form-header p {
            color: var(--text-muted);
            font-size: 0.95rem;
        }

        .form-header a {
            color: var(--primary);
            text-decoration: none;
            font-weight: 700;
            border-bottom: 1px solid transparent;
            transition: border-color 0.2s;
        }

            .form-header a:hover {
                border-bottom-color: var(--primary);
            }

    /* ========== حقول الإدخال – محسنة للمس ========== */
    .form-group {
        margin-bottom: 1.5rem;
    }

    .input-wrapper {
        position: relative;
        display: flex;
        align-items: center;
    }

    .input-icon {
        position: absolute;
        left: 1.3rem;
        color: var(--text-muted);
        font-size: 1.1rem;
        transition: var(--transition);
        z-index: 2;
    }

    .form-control {
        width: 100%;
        padding: 1rem 1rem 1rem 3.2rem;
        background: var(--input-bg);
        border: 1.5px solid var(--input-border);
        border-radius: var(--radius-sm);
        font-size: 0.95rem;
        color: var(--text-light);
        transition: var(--transition);
        outline: none;
    }

        .form-control:focus {
            border-color: var(--input-focus-border);
            background: rgba(255, 255, 255, 0.12);
            box-shadow: 0 0 0 4px rgba(104, 15, 234, 0.25);
        }

            .form-control:focus ~ .input-icon {
                color: var(--primary);
            }

    .validation-message {
        display: block;
        color: var(--danger);
        font-size: 0.8rem;
        margin-top: 0.4rem;
        margin-left: 0.8rem;
        font-weight: 500;
    }

    /* ========== زر التسجيل ========== */
    .btn-register {
        width: 100%;
        padding: 1rem;
        background: linear-gradient(145deg, var(--primary), var(--primary-dark));
        border: none;
        border-radius: var(--radius-sm);
        color: white;
        font-weight: 700;
        font-size: 1.05rem;
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 0.6rem;
        cursor: pointer;
        transition: var(--transition);
        box-shadow: 0 8px 20px rgba(104, 15, 234, 0.3);
        margin-top: 0.5rem;
    }

        .btn-register:hover {
            transform: translateY(-2px);
            box-shadow: 0 12px 28px rgba(104, 15, 234, 0.5);
        }

    /* ========== الفاصل ========== */
    .divider {
        display: flex;
        align-items: center;
        color: var(--text-muted);
        font-size: 0.8rem;
        margin: 2rem 0 1.5rem;
        text-transform: uppercase;
        letter-spacing: 1px;
    }

        .divider::before, .divider::after {
            content: "";
            flex: 1;
            height: 1px;
            background: linear-gradient(90deg, transparent, rgba(255,255,255,0.2), transparent);
        }

        .divider span {
            padding: 0 1rem;
        }

    /* ========== أزرار التواصل ========== */
    .social-grid {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 1rem;
    }

    .social-btn {
        width: 100%;
        padding: 0.9rem;
        background: rgba(255, 255, 255, 0.06);
        border: 1px solid rgba(255, 255, 255, 0.1);
        border-radius: var(--radius-sm);
        color: var(--text-light);
        font-weight: 600;
        font-size: 0.95rem;
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 0.7rem;
        transition: var(--transition);
        cursor: pointer;
        backdrop-filter: blur(8px);
    }

        .social-btn:hover {
            background: rgba(255, 255, 255, 0.12);
            border-color: rgba(255, 255, 255, 0.2);
            transform: translateY(-2px);
        }

        .social-btn.google i {
            color: #EA4335;
        }

        .social-btn.facebook i {
            color: #1877F2;
        }

    /* ========== تحسينات الجوال – تجربة ممتازة ========== */
    @@media (max-width: 800px) {
        body

    {
        padding: 0.75rem;
        align-items: flex-start;
    }

    .split-screen {
        flex-direction: column;
        width: 100%;
        border-radius: var(--radius-md);
          margin-top: 100px;
        }

    .brand-side {
        flex: 0 0 auto;
        padding: 2rem 1.5rem;
        border-radius: var(--radius-md) var(--radius-md) 0 0;
        display: none; /* مخفي – يمكنك إظهاره إذا أردت */
    }

    .form-side {
        padding: 2rem 1.5rem;
        border-radius: var(--radius-md);
    }

    .form-header h2 {
        font-size: 1.9rem;
    }

    .form-header p {
        font-size: 1rem;
    }

    .form-control {
        padding: 1.2rem 1.2rem 1.2rem 3.5rem;
        font-size: 1rem;
    }

    .input-icon {
        font-size: 1.2rem;
        left: 1.4rem;
    }

    .btn-register {
        padding: 1.2rem;
        font-size: 1.1rem;
    }

    .social-grid {
        grid-template-columns: 1fr; /* أزرار تحت بعض */
    }

    .social-btn {
        padding: 1rem;
        font-size: 1rem;
    }

    }

    /* شاشات صغيرة جداً (أقل من 400px) */
    @@media (max-width: 400px) {
        .form-side

    {
        padding: 1.8rem 1.2rem;
    }

    .form-header h2 {
        font-size: 1.7rem;
    }

    .form-control {
        padding-left: 3.2rem;
    }

    .input-icon {
        left: 1.2rem;
    }

    }

    /* إزالة تأثيرات المتصفح الافتراضية */
    input:-webkit-autofill,
    input:-webkit-autofill:hover,
    input:-webkit-autofill:focus,
    input:-webkit-autofill:active {
        -webkit-background-clip: text;
        -webkit-text-fill-color: white;
        transition: background-color 5000s ease-in-out 0s;
        box-shadow: inset 0 0 20px 20px rgba(255,255,255,0.05);
    }
</style>

<!-- ========== صفحة التسجيل المنقسمة ========== -->
<div class="split-screen">
    <!-- الجانب التسويقي (يُخفى في الجوال) -->
    <div class="brand-side">
        <div class="brand-circles">
            <div class="circle" style="top: -10%; left: -10%; width: 200px; height: 200px;"></div>
            <div class="circle" style="bottom: 10%; right: -5%; width: 150px; height: 150px;"></div>
        </div>
        <div class="brand-content">
            <h1>Join Our Community</h1>
            <p>Create an account today to get exclusive offers, track orders, and experience seamless shopping.</p>
        </div>
    </div>

    <!-- الجانب الأيمن: النموذج -->
    <div class="form-side">
        <div class="form-header">
            <h2>Create Account</h2>
            <p>Already a member? <a asp-action="Login" asp-controller="Account">Log in here</a></p>
        </div>

        <form asp-action="Register" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3" style="color: var(--danger);"></div>

            <div class="form-group">
                <div class="input-wrapper">
                    <i class="fas fa-user input-icon"></i>
                    <input asp-for="FullName" class="form-control" placeholder="Full Name" />
                </div>
                <span asp-validation-for="FullName" class="validation-message"></span>
            </div>

            <div class="form-group">
                <div class="input-wrapper">
                    <i class="fas fa-envelope input-icon"></i>
                    <input asp-for="Email" class="form-control" placeholder="Email Address" />
                </div>
                <span asp-validation-for="Email" class="validation-message"></span>
            </div>

            <div class="form-group">
                <div class="input-wrapper">
                    <i class="fas fa-lock input-icon"></i>
                    <input asp-for="Password" class="form-control" id="Password" placeholder="Password" type="password" />
                </div>
                <span asp-validation-for="Password" class="validation-message"></span>
            </div>

            <div class="form-group">
                <div class="input-wrapper">
                    <i class="fas fa-key input-icon"></i>
                    <input asp-for="ConfirmPassword" class="form-control" id="ConfirmPassword" placeholder="Confirm Password" type="password" />
                </div>
                <span asp-validation-for="ConfirmPassword" class="validation-message" id="confirmError"></span>
            </div>

            <button type="submit" class="btn-register">
                Get Started <i class="fas fa-arrow-right"></i>
            </button>
        </form>

        <div class="divider">
            <span>Or sign up with</span>
        </div>

        <!-- زر Google -->
        <form asp-controller="Account" asp-action="ExternalLogin" method="post" style="width:100%;">
            <input type="hidden" name="provider" value="Google" />
            <button type="submit" class="social-btn google">
                <i class="fab fa-google"></i> Google
            </button>
        </form>

        <!-- اختياري: إضافة فيسبوك أو أي مزود آخر بنفس التنسيق -->
        @*
        <form asp-controller="Account" asp-action="ExternalLogin" method="post" style="margin-top:0.8rem;">
            <input type="hidden" name="provider" value="Facebook" />
            <button type="submit" class="social-btn facebook">
                <i class="fab fa-facebook-f"></i> Facebook
            </button>
        </form>
        *@
    </div>
</div>

<!-- ===== التحقق من تطابق كلمة المرور (Client‑side) ===== -->
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.5/jquery.validate.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/4.0.0/jquery.validate.unobtrusive.min.js"></script>

<script>
    // تحقق فوري من تطابق كلمتي المرور
    (function() {
        const pwd = document.getElementById('Password');
        const confirmPwd = document.getElementById('ConfirmPassword');
        const errorSpan = document.getElementById('confirmError');

        function validateMatch() {
            if (pwd.value !== confirmPwd.value) {
                errorSpan.textContent = 'Passwords do not match.';
                errorSpan.style.color = 'var(--danger)';
            } else {
                errorSpan.textContent = '';
            }
        }

        if (pwd && confirmPwd) {
            pwd.addEventListener('input', validateMatch);
            confirmPwd.addEventListener('input', validateMatch);
        }
    })();
</script>

@* إذا أردت تفعيل السكربتات الجزئية *@
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}