@model ShopApp.ViewModel.ProfUserViewModel

@{
    ViewData["Title"] = "Update Profile";
}

<style>
    /* ===== VARIABLES ===== */
    :root {
        --primary: #8e44ad;
        --primary-dark: #732d91;
        --primary-light: #f3e8f8;
        --accent: #ff9f43;
        --success: #27ae60;
        --danger: #e74c3c;
        --gray-100: #f8f9fa;
        --gray-200: #e9ecef;
        --gray-300: #dee2e6;
        --gray-600: #6c757d;
        --gray-900: #212529;
        --shadow-sm: 0 4px 12px rgba(0, 0, 0, 0.03);
        --shadow-md: 0 8px 24px rgba(0, 0, 0, 0.06);
        --shadow-lg: 0 16px 40px rgba(0, 0, 0, 0.08);
        --radius-md: 16px;
        --radius-lg: 24px;
        --transition: all 0.25s ease;
    }

    /* ===== GLOBAL STYLES ===== */

    .profile-edit-wrapper {
        max-width: 1000px;
        margin: 0 auto;
        width: 100%;
        animation: fadeIn 0.6s cubic-bezier(0.23, 1, 0.32, 1);
    }

    @@keyframes fadeIn {
        0%

    {
        opacity: 0;
        transform: translateY(15px);
    }

    100% {
        opacity: 1;
        transform: translateY(0);
    }

    }

    /* ===== MAIN CARD ===== */
    .edit-card {
        background: rgba(255, 255, 255, 0.9);
        backdrop-filter: blur(20px);
        -webkit-backdrop-filter: blur(20px);
        border: 1px solid rgba(255, 255, 255, 0.5);
        border-radius: var(--radius-lg);
        box-shadow: var(--shadow-lg);
        overflow: hidden;
    }

    .edit-card__header {
        padding: 2rem 2.5rem;
        background: white;
        border-bottom: 1px solid var(--gray-200);
        display: flex;
        align-items: center;
        gap: 1rem;
    }

        .edit-card__header h3 {
            font-weight: 700;
            font-size: 1.8rem;
            color: var(--gray-900);
            margin: 0;
            letter-spacing: -0.01em;
            display: flex;
            align-items: center;
            gap: 0.75rem;
        }

        .edit-card__header i {
            color: var(--primary);
            font-size: 2rem;
        }

    .edit-card__body {
        padding: 2.5rem;
    }

    /* ===== PROFILE IMAGE SECTION ===== */
    .avatar-section {
        display: flex;
        align-items: center;
        gap: 2.5rem;
        margin-bottom: 2.5rem;
        padding-bottom: 2rem;
        border-bottom: 1px solid var(--gray-200);
        flex-wrap: wrap;
    }

    .avatar-wrapper {
        position: relative;
        width: 140px;
        height: 140px;
        flex-shrink: 0;
    }

    .avatar-preview {
        width: 100%;
        height: 100%;
        border-radius: 50%;
        object-fit: cover;
        border: 4px solid white;
        box-shadow: var(--shadow-md);
        transition: var(--transition);
    }

    .avatar-overlay {
        position: absolute;
        inset: 0;
        background: rgba(0, 0, 0, 0.5);
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        opacity: 0;
        transition: var(--transition);
        cursor: pointer;
        backdrop-filter: blur(4px);
        border: 4px solid white;
    }

    .avatar-wrapper:hover .avatar-overlay {
        opacity: 1;
    }

    .avatar-overlay i {
        color: white;
        font-size: 2rem;
        text-shadow: 0 2px 4px rgba(0,0,0,0.2);
    }

    .upload-info {
        flex: 1;
        min-width: 200px;
    }

    .upload-label {
        display: inline-block;
        font-weight: 600;
        color: var(--gray-900);
        margin-bottom: 0.5rem;
        font-size: 1.1rem;
    }

    .upload-hint {
        color: var(--gray-600);
        font-size: 0.9rem;
        margin: 0;
        display: flex;
        align-items: center;
        gap: 0.4rem;
    }

        .upload-hint i {
            color: var(--primary);
        }

    /* ===== FORM GRID ===== */
    .form-grid {
        display: grid;
        grid-template-columns: repeat(2, 1fr);
        gap: 1.5rem 2rem;
    }

    .form-group {
        display: flex;
        flex-direction: column;
        gap: 0.5rem;
    }

        .form-group.full-width {
            grid-column: span 2;
        }

    .form-label {
        font-weight: 600;
        font-size: 0.9rem;
        color: var(--gray-900);
        display: flex;
        align-items: center;
        gap: 0.5rem;
        margin-bottom: 0.25rem;
    }

        .form-label i {
            color: var(--primary);
            width: 18px;
            text-align: center;
        }

    .input-wrapper {
        position: relative;
        display: flex;
        align-items: center;
    }

    .input-icon {
        position: absolute;
        left: 1rem;
        color: var(--gray-600);
        font-size: 1rem;
    }

    .form-control, .form-select {
        width: 100%;
        padding: 0.85rem 1rem 0.85rem 2.8rem;
        border: 2px solid var(--gray-200);
        border-radius: var(--radius-md);
        font-size: 0.95rem;
        transition: var(--transition);
        background: white;
        color: var(--gray-900);
    }

        .form-control:focus, .form-select:focus {
            border-color: var(--primary);
            outline: none;
            box-shadow: 0 0 0 4px rgba(142, 68, 173, 0.1);
        }

        .form-control.is-invalid, .form-select.is-invalid {
            border-color: var(--danger);
            background-image: none;
        }

    .invalid-feedback {
        color: var(--danger);
        font-size: 0.8rem;
        margin-top: 0.3rem;
        display: flex;
        align-items: center;
        gap: 0.3rem;
    }

    /* ===== BUTTON ===== */
    .action-buttons {
        margin-top: 2.5rem;
        padding-top: 1.5rem;
        border-top: 1px solid var(--gray-200);
        display: flex;
        justify-content: flex-end;
    }

    .btn-save {
        background: linear-gradient(145deg, var(--primary), var(--primary-dark));
        color: white;
        border: none;
        padding: 0.9rem 2.8rem;
        border-radius: 50px;
        font-weight: 700;
        font-size: 1rem;
        letter-spacing: 0.5px;
        display: inline-flex;
        align-items: center;
        justify-content: center;
        gap: 0.75rem;
        transition: var(--transition);
        box-shadow: 0 8px 16px rgba(142, 68, 173, 0.25);
        border: 1px solid rgba(255, 255, 255, 0.3);
        cursor: pointer;
    }

        .btn-save:hover {
            transform: translateY(-3px);
            box-shadow: 0 12px 24px rgba(142, 68, 173, 0.35);
            background: linear-gradient(145deg, var(--primary-dark), var(--primary));
        }

        .btn-save:active {
            transform: translateY(1px);
            box-shadow: 0 4px 12px rgba(142, 68, 173, 0.4);
        }

    /* ===== RESPONSIVE ===== */
    @@media (max-width: 768px) {
        .edit-card__header

    {
        padding: 1.5rem;
    }

    .edit-card__header h3 {
        font-size: 1.6rem;
    }

    .edit-card__body {
        padding: 1.5rem;
    }

    .avatar-section {
        flex-direction: column;
        align-items: center;
        text-align: center;
        gap: 1.5rem;
    }

    .upload-info {
        text-align: center;
    }

    .upload-hint {
        justify-content: center;
    }

    .form-grid {
        grid-template-columns: 1fr;
        gap: 1.2rem;
    }

    .form-group.full-width {
        grid-column: span 1;
    }

    .action-buttons {
        justify-content: stretch;
    }

    .btn-save {
        width: 100%;
        padding: 0.9rem 1.5rem;
    }

    }

    @@media (max-width: 480px) {
        .edit-card__header h3

    {
        font-size: 1.4rem;
    }

    .avatar-wrapper {
        width: 120px;
        height: 120px;
    }

    .form-control, .form-select {
        padding: 0.75rem 1rem 0.75rem 2.6rem;
        font-size: 0.9rem;
    }

    .btn-save {
        font-size: 0.95rem;
        padding: 0.8rem 1.2rem;
    }

    }

    /* ===== UTILITIES ===== */
    .text-muted {
        color: var(--gray-600);
    }

    .d-none {
        display: none;
    }
</style>

<div class="profile-edit-wrapper">
    <div class="edit-card">
        <!-- Header -->
        <div class="edit-card__header">
            <h3>
                <i class="fas fa-user-edit"></i>
                Edit Profile
            </h3>
        </div>

        <!-- Body -->
        <div class="edit-card__body">
            <form asp-action="UpdateProfile" method="post" enctype="multipart/form-data" id="profileForm">
                <!-- Avatar Upload - Modern Interactive -->
                <div class="avatar-section">
                    <div class="avatar-wrapper">
                        <img id="previewImage"
                             src="/ImageProfile/@Model.ProfilePictureUrl"
                             alt="Profile"
                             class="avatar-preview"
                             onerror="this.src='https://ui-avatars.com/api/?name=@Uri.EscapeDataString(Model.FullName ?? "User")&background=8e44ad&color=fff&size=140';" />
                        <label for="ProfileImageInput" class="avatar-overlay">
                            <i class="fas fa-camera"></i>
                        </label>
                    </div>
                    <div class="upload-info">
                        <span class="upload-label">Profile picture</span>
                        <p class="upload-hint">
                            <i class="fas fa-cloud-upload-alt"></i>
                            Click the camera icon to change. JPEG, PNG up to 5MB.
                        </p>
                        <input type="file"
                               id="ProfileImageInput"
                               name="ProfileImage"
                               class="d-none"
                               accept="image/jpeg, image/png, image/jpg" />
                    </div>
                </div>

                <!-- Form Fields - 2 Column Grid -->
                <div class="form-grid">
                    <!-- Full Name -->
                    <div class="form-group">
                        <label asp-for="FullName" class="form-label">
                            <i class="fas fa-user"></i> Full Name
                        </label>
                        <div class="input-wrapper">
                            <i class="fas fa-user input-icon"></i>
                            <input asp-for="FullName" class="form-control" placeholder="e.g. Ahmed Hassan" />
                        </div>
                        <span asp-validation-for="FullName" class="invalid-feedback"></span>
                    </div>

                    <!-- Phone Number -->
                    <div class="form-group">
                        <label asp-for="PhoneNumber" class="form-label">
                            <i class="fas fa-phone-alt"></i> Phone
                        </label>
                        <div class="input-wrapper">
                            <i class="fas fa-phone-alt input-icon"></i>
                            <input asp-for="PhoneNumber" class="form-control" placeholder="+20 123 456 789" />
                        </div>
                        <span asp-validation-for="PhoneNumber" class="invalid-feedback"></span>
                    </div>

                    <!-- Gender -->
                    <div class="form-group">
                        <label asp-for="Gender" class="form-label">
                            <i class="fas fa-venus-mars"></i> Gender
                        </label>
                        <div class="input-wrapper">
                            <i class="fas fa-venus-mars input-icon"></i>
                            <select asp-for="Gender" class="form-select">
                                <option value="" disabled selected>Select gender</option>
                                <option value="Male">Male</option>
                                <option value="Female">Female</option>
                                <option value="Other">Other</option>
                            </select>
                        </div>
                        <span asp-validation-for="Gender" class="invalid-feedback"></span>
                    </div>

                    <!-- Birth Date -->
                    <div class="form-group">
                        <label asp-for="BirthDate" class="form-label">
                            <i class="fas fa-birthday-cake"></i> Birth Date
                        </label>
                        <div class="input-wrapper">
                            <i class="fas fa-calendar input-icon"></i>
                            <input asp-for="BirthDate" type="date" class="form-control" />
                        </div>
                        <span asp-validation-for="BirthDate" class="invalid-feedback"></span>
                    </div>

                    <!-- City -->
                    <div class="form-group">
                        <label asp-for="City" class="form-label">
                            <i class="fas fa-city"></i> City
                        </label>
                        <div class="input-wrapper">
                            <i class="fas fa-city input-icon"></i>
                            <input asp-for="City" class="form-control" placeholder="e.g. Cairo" />
                        </div>
                        <span asp-validation-for="City" class="invalid-feedback"></span>
                    </div>

                    <!-- Country -->
                    <div class="form-group">
                        <label asp-for="Country" class="form-label">
                            <i class="fas fa-globe"></i> Country
                        </label>
                        <div class="input-wrapper">
                            <i class="fas fa-globe input-icon"></i>
                            <input asp-for="Country" class="form-control" placeholder="e.g. Egypt" />
                        </div>
                        <span asp-validation-for="Country" class="invalid-feedback"></span>
                    </div>
                </div>

                <!-- Action Button -->
                <div class="action-buttons">
                    <button type="submit" class="btn-save">
                        <i class="fas fa-check-circle"></i>
                        Save Changes
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    <script>
        (function() {
            "use strict";

            // ===== LIVE AVATAR PREVIEW =====
            const fileInput = document.getElementById('ProfileImageInput');
            const preview = document.getElementById('previewImage');

            fileInput.addEventListener('change', function(e) {
                const file = this.files[0];
                if (file) {
                    // Simple validation
                    const validTypes = ['image/jpeg', 'image/png', 'image/jpg'];
                    if (!validTypes.includes(file.type)) {
                        alert('Please select a valid image file (JPEG, PNG).');
                        this.value = '';
                        return;
                    }
                    if (file.size > 5 * 1024 * 1024) {
                        alert('File size must be less than 5MB.');
                        this.value = '';
                        return;
                    }

                    const reader = new FileReader();
                    reader.onload = function(ev) {
                        preview.src = ev.target.result;
                    };
                    reader.readAsDataURL(file);
                }
            });

            // ===== AUTO-DISMISS VALIDATION MESSAGES =====
            const form = document.getElementById('profileForm');
            const inputs = form.querySelectorAll('input, select');
            inputs.forEach(input => {
                input.addEventListener('input', function() {
                    const feedback = this.parentElement.parentElement.querySelector('.invalid-feedback');
                    if (feedback) {
                        feedback.style.opacity = '0';
                        setTimeout(() => {
                            feedback.style.opacity = '1';
                        }, 150);
                    }
                });
            });

            // ===== TOUCH OPTIMIZATION (remove hover on mobile) =====
            if ('ontouchstart' in window) {
                document.querySelector('.avatar-overlay').style.opacity = '1';
                document.querySelector('.avatar-overlay').style.background = 'rgba(0,0,0,0.4)';
            }

            // ===== FALLBACK FOR MISSING PROFILE PICTURE =====
            preview.addEventListener('error', function() {
                const name = '@Model.FullName' || 'User';
                this.src = `https://ui-avatars.com/api/?name=${encodeURIComponent(name)}&background=8e44ad&color=fff&size=140`;
            });
        })();
    </script>
}