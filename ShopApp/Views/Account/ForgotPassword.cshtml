@model ShopApp.ViewModel.ForgotPasswordViewModel

<div class="container mt-5 d-flex justify-content-center align-items-center" style="min-height: 80vh;">
    <div class="card shadow p-4 w-100" style="max-width: 450px;">
        <h3 class="text-center mb-4 text-primary">Forgot Password</h3>

        <form asp-action="ForgotPassword" method="post" novalidate>
            <div class="mb-3">
                <label asp-for="Email" class="form-label">Email address</label>
                <input asp-for="Email" class="form-control" placeholder="Enter your email" />
                <span asp-validation-for="Email" class="text-danger small"></span>
            </div>

            <button type="submit" class="btn btn-outline-primary w-100 mt-4">Send Reset Link</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}