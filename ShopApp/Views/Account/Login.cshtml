@model ShopApp.ViewModels.LoginViewModel

@{
    ViewData["Title"] = "Sign In";
    Layout = null;
}

<!-- ===== META RESPONSIVE (الحل الأساسي لمشكلة صغر البطاقة) ===== -->
<meta charset="utf-8">
<meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.5, user-scalable=yes">

<!-- ===== FONTS & ICONS ===== -->
<link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800&display=swap" rel="stylesheet">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">

<style>
    /* ---------- DESIGN SYSTEM (مُحسّن للجوال) ---------- */
    :root {
        --primary: #6366f1;
        --primary-glow: rgba(99, 102, 241, 0.4);
        --accent: #a855f7;
        --card-bg: rgba(20, 3, 50, 0.92);
        --text-light: #ffffff;
        --text-muted: rgba(255, 255, 255, 0.7);
        --input-bg: rgba(255, 255, 255, 0.08);
        --input-border: rgba(255, 255, 255, 0.15);
        --input-focus-border: var(--primary);
        --danger: #f43f5e;
        --radius-md: 24px;
        --radius-sm: 16px;
        --blur: blur(20px);
        --transition: all 0.25s ease;
    }

    * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
    }

    body {
        font-family: 'Inter', sans-serif;
        background: radial-gradient(circle at 30% 40%, #1a1a2e, #0f0f1a);
        min-height: 100vh;
        display: flex;
        align-items: center;
        justify-content: center;
        padding: 0.75rem; /* أقل من السابق لإتاحة مساحة أكبر للبطاقة */
        position: relative;
    }

        /* خلفية متحركة خفيفة (أقل استهلاكاً) */
        body::before {
            content: '';
            position: fixed;
            inset: 0;
            background: url('data:image/svg+xml;utf8,<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 200 200"><circle cx="30" cy="30" r="20" fill="%236366f1" opacity="0.1"/><circle cx="150" cy="80" r="40" fill="%23a855f7" opacity="0.08"/><circle cx="180" cy="160" r="30" fill="%233b82f6" opacity="0.05"/></svg>');
            background-size: 300px 300px;
            animation: floatBlob 60s infinite linear;
            pointer-events: none;
        }

    @@keyframes floatBlob {
        0%

    {
        transform: translate(0, 0) rotate(0deg);
    }

    100% {
        transform: translate(2%, 3%) rotate(360deg);
    }

    }

    /* ---------- البطاقة الأساسية – مرنة بالكامل ---------- */
    .login-card {
        width: min(440px, 95%); /* لا تتجاوز 440px على الشاشات الكبيرة، 95% على الصغيرة */
        background: var(--card-bg);
        backdrop-filter: var(--blur);
        -webkit-backdrop-filter: var(--blur);
        border: 1px solid rgba(255, 255, 255, 0.1);
        border-radius: var(--radius-md);
        padding: 2.2rem 2rem;
        box-shadow: 0 20px 40px -10px rgba(0, 0, 0, 0.5), 0 0 0 1px rgba(255, 255, 255, 0.05) inset;
        transition: var(--transition);
        margin: 0 auto;
    }

    /* ---------- براند أكبر قليلاً وأوضح ---------- */
    .brand {
        display: flex;
        align-items: center;
        gap: 0.75rem;
        margin-bottom: 1.8rem;
    }

        .brand i {
            font-size: 2.2rem;
            background: linear-gradient(135deg, var(--primary), var(--accent));
            -webkit-background-clip: text;
            background-clip: text;
            color: transparent;
            filter: drop-shadow(0 4px 8px var(--primary-glow));
        }

        .brand span {
            font-size: 1.7rem;
            font-weight: 800;
            letter-spacing: -0.02em;
            background: linear-gradient(135deg, #fff, #e0e7ff);
            -webkit-background-clip: text;
            background-clip: text;
            color: transparent;
        }

    /* ---------- الهيدر ---------- */
    .form-header {
        margin-bottom: 2rem;
    }

        .form-header h2 {
            font-size: 2rem; /* أكبر قليلاً */
            font-weight: 700;
            color: var(--text-light);
            margin-bottom: 0.5rem;
            line-height: 1.2;
        }

        .form-header p {
            color: var(--text-muted);
            font-size: 1rem;
        }

        .form-header a {
            color: var(--primary);
            text-decoration: none;
            font-weight: 600;
            border-bottom: 1px solid transparent;
            transition: border-color 0.2s;
        }

            .form-header a:hover {
                border-bottom-color: var(--primary);
            }

    /* ---------- حقول الإدخال – مريحة للمس ---------- */
    .form-group {
        position: relative;
        margin-bottom: 1.7rem;
    }

    .input-wrapper {
        position: relative;
        display: flex;
        align-items: center;
    }

    .input-icon {
        position: absolute;
        left: 1.2rem;
        color: var(--text-muted);
        font-size: 1.1rem;
        transition: var(--transition);
        z-index: 2;
    }

    .form-control {
        width: 100%;
        padding: 1.1rem 1.1rem 1.1rem 3.2rem; /* مساحة أكبر */
        background: var(--input-bg);
        border: 1.5px solid var(--input-border);
        border-radius: var(--radius-sm);
        font-size: 1rem;
        color: var(--text-light);
        transition: var(--transition);
        outline: none;
    }

        .form-control:focus {
            border-color: var(--input-focus-border);
            background: rgba(255, 255, 255, 0.12);
            box-shadow: 0 0 0 4px var(--primary-glow);
        }

            .form-control:focus ~ .input-icon {
                color: var(--primary);
            }

    /* أيقونة إظهار/إخفاء كلمة المرور */
    .password-toggle {
        position: absolute;
        right: 1.2rem;
        color: var(--text-muted);
        cursor: pointer;
        font-size: 1.1rem;
        transition: var(--transition);
        z-index: 3;
    }

        .password-toggle:hover {
            color: var(--primary);
        }

    /* رسائل التحقق – واضحة */
    .validation-message {
        display: block;
        font-size: 0.8rem;
        margin-top: 0.5rem;
        margin-left: 0.5rem;
        color: var(--danger);
        font-weight: 500;
    }

    /* ---------- خيارات إضافية (تذكرني، نسيت كلمة المرور) ---------- */
    .form-options {
        display: flex;
        align-items: center;
        justify-content: space-between;
        margin: 1.2rem 0 2rem;
        flex-wrap: wrap;
        gap: 0.8rem;
    }

    .checkbox-label {
        display: flex;
        align-items: center;
        gap: 0.6rem;
        color: var(--text-muted);
        font-size: 0.95rem;
        cursor: pointer;
    }

        .checkbox-label input {
            accent-color: var(--primary);
            width: 1.2rem;
            height: 1.2rem;
            margin: 0;
        }

    .forgot-link {
        color: var(--text-muted);
        font-size: 0.95rem;
        text-decoration: none;
        transition: color 0.2s;
    }

        .forgot-link:hover {
            color: var(--primary);
        }

    /* ---------- زر تسجيل الدخول – بارز وكبير ---------- */
    .btn-login {
        width: 100%;
        padding: 1.1rem;
        background: linear-gradient(145deg, var(--primary), var(--accent));
        border: none;
        border-radius: var(--radius-sm);
        color: white;
        font-weight: 700;
        font-size: 1.1rem;
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 0.8rem;
        cursor: pointer;
        transition: var(--transition);
        box-shadow: 0 8px 25px rgba(99, 102, 241, 0.4);
        position: relative;
        overflow: hidden;
    }

        .btn-login:hover {
            transform: translateY(-2px);
            box-shadow: 0 12px 30px rgba(99, 102, 241, 0.6);
        }

    /* ---------- الفاصل "أو" ---------- */
    .divider {
        display: flex;
        align-items: center;
        color: var(--text-muted);
        font-size: 0.85rem;
        margin: 2rem 0 1.5rem;
    }

        .divider::before,
        .divider::after {
            content: '';
            flex: 1;
            height: 1px;
            background: linear-gradient(90deg, transparent, rgba(255,255,255,0.2), transparent);
        }

        .divider span {
            padding: 0 1.2rem;
            text-transform: uppercase;
            letter-spacing: 1.5px;
            font-weight: 600;
        }

    /* ---------- أزرار الدخول عبر وسائل التواصل ---------- */
    .social-login {
        display: flex;
        gap: 1rem;
        justify-content: center;
        width: 100%;
    }

    .social-btn {
        flex: 1;
        padding: 1rem;
        background: rgba(255, 255, 255, 0.06);
        border: 1px solid rgba(255, 255, 255, 0.1);
        border-radius: var(--radius-sm);
        color: var(--text-light);
        font-weight: 600;
        font-size: 1rem;
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 0.8rem;
        transition: var(--transition);
        cursor: pointer;
        backdrop-filter: blur(8px);
        width: 100%;
    }

        .social-btn:hover {
            background: rgba(255, 255, 255, 0.15);
            border-color: rgba(255, 255, 255, 0.25);
            transform: translateY(-2px);
        }

        .social-btn i {
            font-size: 1.3rem;
        }

    /* ---------- رسالة الخطأ العالمية ---------- */
    .error-toast {
        background: rgba(244, 63, 94, 0.2);
        border-left: 6px solid var(--danger);
        backdrop-filter: blur(8px);
        border-radius: 12px;
        padding: 1.1rem 1.2rem;
        margin-bottom: 2rem;
        display: flex;
        align-items: flex-start;
        gap: 1rem;
        color: #ffe6e6;
        font-size: 0.9rem;
        animation: slideDown 0.3s;
    }

    @@keyframes slideDown {
        from

    {
        opacity: 0;
        transform: translateY(-15px);
    }

    to {
        opacity: 1;
        transform: translateY(0);
    }

    }

    .error-toast i {
        font-size: 1.3rem;
        color: var(--danger);
    }

    /* ---------- تحسينات مخصصة للجوال (الشاشات أصغر من 600px) ---------- */
    @@media (max-width: 600px) {
        body

    {
        padding: 0.5rem; /* تقليل الهوامش الخارجية لاستغلال المساحة */
    }

    .login-card {
        width: 100%; /* البطاقة تأخذ العرض بالكامل */
        max-width: 100%;
        padding: 2rem 1.5rem; /* مساحة داخلية مريحة */
        border-radius: 28px; /* زوايا ناعمة */
    }

    .brand i {
        font-size: 2rem; /* تكبير أيقونة البراند */
    }

    .brand span {
        font-size: 1.6rem;
    }

    .form-header h2 {
        font-size: 1.9rem; /* عنوان أكبر */
    }

    .form-header p {
        font-size: 1rem;
    }

    .form-control {
        padding: 1.2rem 1.2rem 1.2rem 3.5rem; /* حقول أطول لسهولة اللمس */
        font-size: 1.1rem;
    }

    .input-icon {
        font-size: 1.2rem;
        left: 1.3rem;
    }

    .password-toggle {
        font-size: 1.2rem;
        right: 1.3rem;
    }

    .btn-login {
        padding: 1.2rem;
        font-size: 1.2rem;
    }

    .checkbox-label {
        font-size: 1rem;
    }

        .checkbox-label input {
            width: 1.3rem;
            height: 1.3rem;
        }

    .forgot-link {
        font-size: 1rem;
    }

    .social-btn {
        padding: 1.1rem;
        font-size: 1.1rem;
    }

        .social-btn i {
            font-size: 1.4rem;
        }

    .divider span {
        font-size: 0.9rem;
    }

    }

    /* شاشات صغيرة جداً (أقل من 360px) */
    @@media (max-width: 360px) {
        .login-card

    {
        padding: 1.8rem 1.2rem;
    }

    .brand i {
        font-size: 1.8rem;
    }

    .brand span {
        font-size: 1.4rem;
    }

    .form-header h2 {
        font-size: 1.7rem;
    }

    .form-options {
        flex-direction: column;
        align-items: flex-start;
    }

    }

    /* تحسين دعم المتصفحات القديمة */
    input[type="password"]::-ms-reveal,
    input[type="password"]::-ms-clear {
        display: none;
    }
</style>

<!-- ========== البطاقة ========== -->
<div class="login-card">

    <div class="brand">
        <i class="fas fa-crown"></i>
        <span>SAKERSTOR</span>
    </div>

    <div class="form-header">
        <h2>Welcome back</h2>
        <p>Don't have an account? <a asp-action="Register" asp-controller="Account">Sign up free</a></p>
    </div>

    @if (!ViewData.ModelState.IsValid)
    {
        <div class="error-toast">
            <i class="fas fa-exclamation-triangle"></i>
            <div>
                <strong style="display:block; margin-bottom:4px;">Authentication failed</strong>
                <span>Invalid email or password. Please try again.</span>
            </div>
        </div>
    }

    <form asp-action="Login" method="post">
        @Html.AntiForgeryToken()

        <div class="form-group">
            <div class="input-wrapper">
                <i class="fas fa-envelope input-icon"></i>
                <input asp-for="Email" class="form-control" placeholder="Email address" autocomplete="email" />
            </div>
            <span asp-validation-for="Email" class="validation-message"></span>
        </div>

        <div class="form-group">
            <div class="input-wrapper">
                <i class="fas fa-lock input-icon"></i>
                <input asp-for="Password" type="password" id="passwordField" class="form-control" placeholder="Password" autocomplete="current-password" />
                <i class="fas fa-eye-slash password-toggle" id="togglePassword"></i>
            </div>
            <span asp-validation-for="Password" class="validation-message"></span>
        </div>

        <div class="form-options">
            <label class="checkbox-label">
                <input type="checkbox" name="RememberMe" value="true" />
                <span>Keep me signed in</span>
            </label>
            <a asp-action="ForgotPassword" class="forgot-link">Forgot password?</a>
        </div>

        <button type="submit" class="btn-login">
            Sign in <i class="fas fa-arrow-right"></i>
        </button>
    </form>

    <div class="divider">
        <span>or</span>
    </div>

    <div class="social-login">
        <form asp-controller="Account" asp-action="ExternalLogin" method="post" style="width:100%;">
            <input type="hidden" name="provider" value="Google" />
            <button type="submit" class="social-btn">
                <i class="fab fa-google" style="color: #EA4335;"></i> Google
            </button>
        </form>
    </div>
</div>

<!-- ===== إظهار/إخفاء كلمة المرور ===== -->
<script>
    (function() {
        const toggle = document.getElementById('togglePassword');
        if (toggle) {
            const password = document.getElementById('passwordField');
            toggle.addEventListener('click', function () {
                const type = password.getAttribute('type') === 'password' ? 'text' : 'password';
                password.setAttribute('type', type);
                this.classList.toggle('fa-eye-slash');
                this.classList.toggle('fa-eye');
            });
        }
    })();
</script>

<!-- ===== التحقق من صحة النماذج (client-side) ===== -->
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.5/jquery.validate.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/4.0.0/jquery.validate.unobtrusive.min.js"></script>

@if (!ViewData.ModelState.IsValid)
{
    <script>
        setTimeout(() => {
            const toast = document.querySelector('.error-toast');
            if (toast) toast.style.opacity = '0';
        }, 5000);
    </script>
}