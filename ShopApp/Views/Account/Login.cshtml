@model ShopApp.ViewModels.LoginViewModel

@{
    ViewData["Title"] = "Sign In";
    Layout = null;
}

<!-- ===== MODERN FONTS & ICONS ===== -->
<link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800&display=swap" rel="stylesheet">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">

<style>
    /* ---------- DESIGN SYSTEM ---------- */
    :root {
        --primary: #6366f1;
        --primary-glow: rgba(99, 102, 241, 0.4);
        --accent: #a855f7;
        --bg-dark: #1303F0;
        --card-bg: rgba(35,3,75,0.91);
        --text-light: #ffffff;
        --text-muted: rgba(255, 255, 255, 0.6);
        --input-bg: rgba(255, 255, 255, 0.06);
        --input-border: rgba(255, 255, 255, 0.1);
        --input-focus-border: var(--primary);
        --danger: #f43f5e;
        --success: #10b981;
        --radius-md: 20px;
        --radius-sm: 14px;
        --blur: blur(16px);
        --transition: all 0.25s cubic-bezier(0.4, 0, 0.2, 1);
    }

    * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
    }

    body {
        font-family: 'Inter', sans-serif;
        background: radial-gradient(circle at 20% 30%, #1e1b4b, #0b0d14);
        min-height: 100vh;
        display: flex;
        align-items: center;
        justify-content: center;
        padding: 1.25rem;
        position: relative;
        overflow-x: hidden;
    }

        /* ---------- ANIMATED BACKGROUND (subtle & creative) ---------- */
        body::before {
            content: '';
            position: fixed;
            width: 100vw;
            height: 100vh;
            background: url('data:image/svg+xml;utf8,<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 200 200"><circle cx="30" cy="30" r="20" fill="%236366f1" opacity="0.2"/><circle cx="150" cy="80" r="40" fill="%23a855f7" opacity="0.15"/><circle cx="180" cy="160" r="30" fill="%233b82f6" opacity="0.1"/></svg>');
            background-size: 400px 400px;
            animation: floatBlob 40s infinite linear;
            pointer-events: none;
        }

    @@keyframes floatBlob {
        0%

    {
        transform: translate(0, 0) rotate(0deg);
    }

    33% {
        transform: translate(2%, 1%) rotate(120deg);
    }

    66% {
        transform: translate(-1%, 2%) rotate(240deg);
    }

    100% {
        transform: translate(0, 0) rotate(360deg);
    }

    }

    /* ---------- MAIN CARD (glass, compact, sharp) ---------- */
    .login-card {
        width: 100%;
        max-width: 440px; /* صغيره – compact width */
        background: var(--card-bg);
        backdrop-filter: var(--blur);
        -webkit-backdrop-filter: var(--blur);
        border: 1px solid rgba(255, 255, 255, 0.08);
        border-radius: var(--radius-md);
        padding: 2.5rem 2rem;
        box-shadow: 0 25px 50px -8px rgba(0, 0, 0, 0.4), 0 0 0 1px rgba(255, 255, 255, 0.02) inset;
        animation: cardAppear 0.6s ease-out;
        transition: var(--transition);
    }

    @@keyframes cardAppear {
        0%

    {
        opacity: 0;
        transform: scale(0.96) translateY(10px);
    }

    100% {
        opacity: 1;
        transform: scale(1) translateY(0);
    }

    }

    /* ---------- BRAND & HEADER ---------- */
    .brand {
        display: flex;
        align-items: center;
        gap: 0.75rem;
        margin-bottom: 1.8rem;
    }

        .brand i {
            font-size: 2rem;
            background: linear-gradient(135deg, var(--primary), var(--accent));
            -webkit-background-clip: text;
            background-clip: text;
            color: transparent;
            filter: drop-shadow(0 4px 6px var(--primary-glow));
        }

        .brand span {
            font-size: 1.5rem;
            font-weight: 800;
            letter-spacing: -0.025em;
            background: linear-gradient(135deg, #fff, #e2e8f0);
            -webkit-background-clip: text;
            background-clip: text;
            color: transparent;
        }

    .form-header {
        margin-bottom: 2rem;
    }

        .form-header h2 {
            font-size: 1.8rem;
            font-weight: 700;
            color: var(--text-light);
            margin-bottom: 0.4rem;
        }

        .form-header p {
            color: var(--text-muted);
            font-size: 0.95rem;
        }

        .form-header a {
            color: var(--primary);
            text-decoration: none;
            font-weight: 600;
            transition: var(--transition);
            border-bottom: 1px solid transparent;
        }

            .form-header a:hover {
                border-bottom-color: var(--primary);
            }

    /* ---------- FLOATING LABEL GROUPS (space‑saving & modern) ---------- */
    .form-group {
        position: relative;
        margin-bottom: 1.5rem;
    }

    .input-wrapper {
        position: relative;
        display: flex;
        align-items: center;
    }

    .input-icon {
        position: absolute;
        left: 1.1rem;
        color: var(--text-muted);
        font-size: 1rem;
        transition: var(--transition);
        z-index: 2;
    }

    .form-control {
        width: 100%;
        padding: 1rem 1rem 1rem 3rem;
        background: var(--input-bg);
        border: 1.5px solid var(--input-border);
        border-radius: var(--radius-sm);
        font-size: 0.95rem;
        color: var(--text-light);
        transition: var(--transition);
        outline: none;
    }

        .form-control:focus {
            border-color: var(--input-focus-border);
            background: rgba(255, 255, 255, 0.1);
            box-shadow: 0 0 0 4px var(--primary-glow);
        }

            .form-control:focus ~ .input-icon {
                color: var(--primary);
            }

    /* ---------- PASSWORD TOGGLE (creative micro‑interaction) ---------- */
    .password-toggle {
        position: absolute;
        right: 1.1rem;
        color: var(--text-muted);
        cursor: pointer;
        transition: var(--transition);
        font-size: 1rem;
        z-index: 3;
    }

        .password-toggle:hover {
            color: var(--primary);
        }

    /* ---------- VALIDATION MESSAGES (clean & subtle) ---------- */
    .validation-message {
        display: block;
        font-size: 0.75rem;
        margin-top: 0.4rem;
        margin-left: 0.8rem;
        color: var(--danger);
        font-weight: 500;
        letter-spacing: 0.3px;
    }

    /* ---------- OPTIONS ROW (remember + forgot) ---------- */
    .form-options {
        display: flex;
        align-items: center;
        justify-content: space-between;
        margin: 1rem 0 1.8rem;
    }

    .checkbox-label {
        display: flex;
        align-items: center;
        gap: 0.5rem;
        color: var(--text-muted);
        font-size: 0.9rem;
        cursor: pointer;
    }

        .checkbox-label input {
            accent-color: var(--primary);
            width: 1rem;
            height: 1rem;
            cursor: pointer;
        }

    .forgot-link {
        color: var(--text-muted);
        font-size: 0.9rem;
        text-decoration: none;
        transition: var(--transition);
    }

        .forgot-link:hover {
            color: var(--primary);
        }

    /* ---------- PRIMARY BUTTON (gradient, 3D lift) ---------- */
    .btn-login {
        width: 100%;
        padding: 1rem;
        background: linear-gradient(145deg, var(--primary), var(--accent));
        border: none;
        border-radius: var(--radius-sm);
        color: white;
        font-weight: 700;
        font-size: 1rem;
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 0.6rem;
        cursor: pointer;
        transition: var(--transition);
        box-shadow: 0 8px 20px rgba(99, 102, 241, 0.3);
        position: relative;
        overflow: hidden;
    }

        .btn-login::before {
            content: '';
            position: absolute;
            top: 50%;
            left: 50%;
            width: 0;
            height: 0;
            border-radius: 50%;
            background: rgba(255, 255, 255, 0.2);
            transition: width 0.6s, height 0.6s, top 0.6s, left 0.6s;
        }

        .btn-login:hover::before {
            width: 300px;
            height: 300px;
            top: -80px;
            left: -80px;
        }

        .btn-login:hover {
            transform: translateY(-2px);
            box-shadow: 0 12px 28px rgba(99, 102, 241, 0.5);
        }

    /* ---------- DIVIDER WITH OR (elegant) ---------- */
    .divider {
        display: flex;
        align-items: center;
        color: var(--text-muted);
        font-size: 0.8rem;
        margin: 2rem 0 1.5rem;
    }

        .divider::before,
        .divider::after {
            content: '';
            flex: 1;
            height: 1px;
            background: linear-gradient(90deg, transparent, rgba(255,255,255,0.2), transparent);
        }

        .divider span {
            padding: 0 1rem;
            text-transform: uppercase;
            letter-spacing: 1px;
            font-weight: 600;
        }

    /* ---------- SOCIAL LOGIN (minimal, elegant) ---------- */
    .social-login {
        display: flex;
        gap: 0.8rem;
        justify-content: center;
        width: 100%;
    }

    .social-btn {
        flex: 1;
        padding: 0.8rem;
        background: rgba(255, 255, 255, 0.05);
        border: 1px solid rgba(255, 255, 255, 0.1);
        border-radius: var(--radius-sm);
        color: var(--text-light);
        font-weight: 600;
        font-size: 0.9rem;
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 0.6rem;
        transition: var(--transition);
        cursor: pointer;
        backdrop-filter: blur(8px);
        width: 100%;
    }

        .social-btn:hover {
            background: rgba(255, 255, 255, 0.12);
            border-color: rgba(255, 255, 255, 0.2);
            transform: translateY(-2px);
        }

        .social-btn i {
            font-size: 1.1rem;
        }

    /* ---------- TOAST / INLINE ERROR (super sleek) ---------- */
    .error-toast {
        background: rgba(244, 63, 94, 0.15);
        border-left: 4px solid var(--danger);
        backdrop-filter: blur(8px);
        border-radius: 10px;
        padding: 1rem 1.2rem;
        margin-bottom: 1.8rem;
        display: flex;
        align-items: flex-start;
        gap: 0.8rem;
        color: #ffe0e0;
        font-size: 0.85rem;
        animation: slideDown 0.3s;
    }

    @@keyframes slideDown {
        from

    {
        opacity: 0;
        transform: translateY(-10px);
    }

    to {
        opacity: 1;
        transform: translateY(0);
    }

    }

    .error-toast i {
        font-size: 1.2rem;
        color: var(--danger);
    }

    /* ---------- RESPONSIVE (flawless on all devices) ---------- */
    @@media (max-width: 480px) {
        .login-card {
            padding: 2rem 1.5rem;
            border-radius: 24px;
            max-width: 100%;
        }

        .brand i {
            font-size: 1.8rem;
        }

        .brand span {
            font-size: 1.3rem;
        }

        .form-header h2 {
            font-size: 1.6rem;
        }

        .form-options {
            flex-direction: column;
            align-items: flex-start;
            gap: 0.8rem;
        }

        .social-login {
            flex-direction: column;
        }
    }

    /* Hide number input spinners etc. */
    input[type="password"]::-ms-reveal,
    input[type="password"]::-ms-clear {
        display: none;
    }
</style>

<!-- ========== MAIN CARD ========== -->
<div class="login-card">

    <!-- BRAND (small, chic) -->
    <div class="brand">
        <i class="fas fa-crown"></i>
        <span>SAKERSTOR</span>
    </div>

    <!-- HEADER -->
    <div class="form-header">
        <h2>Welcome back</h2>
        <p>Don't have an account? <a asp-action="Register" asp-controller="Account">Sign up free</a></p>
    </div>

    <!-- GLOBAL ERROR DISPLAY (model‑level) -->
    @if (!ViewData.ModelState.IsValid)
    {
        <div class="error-toast">
            <i class="fas fa-exclamation-triangle"></i>
            <div>
                <strong style="display:block; margin-bottom:4px;">Authentication failed</strong>
                <span>Invalid email or password. Please try again.</span>
            </div>
        </div>
    }

    <!-- LOGIN FORM -->
    <form asp-action="Login" method="post">
        @Html.AntiForgeryToken()

        <!-- EMAIL (with icon) -->
        <div class="form-group">
            <div class="input-wrapper">
                <i class="fas fa-envelope input-icon"></i>
                <input asp-for="Email" class="form-control" placeholder="Email address" autocomplete="email" />
            </div>
            <span asp-validation-for="Email" class="validation-message"></span>
        </div>

        <!-- PASSWORD (with icon + show/hide toggle) -->
        <div class="form-group">
            <div class="input-wrapper">
                <i class="fas fa-lock input-icon"></i>
                <input asp-for="Password" type="password" id="passwordField" class="form-control" placeholder="Password" autocomplete="current-password" />
                <i class="fas fa-eye-slash password-toggle" id="togglePassword"></i>
            </div>
            <span asp-validation-for="Password" class="validation-message"></span>
        </div>

        <!-- OPTIONS: REMEMBER ME + FORGOT PASSWORD -->
        <div class="form-options">
            <label class="checkbox-label">
                <input type="checkbox" name="RememberMe" value="true" />
                <span>Keep me signed in</span>
            </label>
            <a asp-action="ForgotPassword" class="forgot-link">Forgot password?</a>
        </div>

        <!-- SUBMIT BUTTON -->
        <button type="submit" class="btn-login">
            Sign in <i class="fas fa-arrow-right"></i>
        </button>
    </form>

    <!-- DIVIDER -->
    <div class="divider">
        <span>or</span>
    </div>

    <!-- SOCIAL LOGIN (Google) -->
    <div class="social-login">
        <form asp-controller="Account" asp-action="ExternalLogin" method="post" style="width:100%;">
            <input type="hidden" name="provider" value="Google" />
            <button type="submit" class="social-btn">
                <i class="fab fa-google" style="color: #EA4335;"></i> Google
            </button>
        </form>
        <!-- You can easily add more providers here -->
    </div>
</div>

<!-- ===== SHOW/HIDE PASSWORD (clean vanilla JS) ===== -->
<script>
    (function() {
        const toggle = document.getElementById('togglePassword');
        if (toggle) {
            const password = document.getElementById('passwordField');
            toggle.addEventListener('click', function () {
                const type = password.getAttribute('type') === 'password' ? 'text' : 'password';
                password.setAttribute('type', type);
                this.classList.toggle('fa-eye-slash');
                this.classList.toggle('fa-eye');
            });
        }
    })();
</script>

<!-- ===== CLIENT‑SIDE VALIDATION (jQuery validation) ===== -->
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.5/jquery.validate.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/4.0.0/jquery.validate.unobtrusive.min.js"></script>

<!-- OPTIONAL: auto‑hide error toast after 5 sec (if you prefer toast behavior) -->
@if (!ViewData.ModelState.IsValid)
{
    <script>
        setTimeout(() => {
            const toast = document.querySelector('.error-toast');
            if (toast) toast.style.opacity = '0';
        }, 5000);
    </script>
}

