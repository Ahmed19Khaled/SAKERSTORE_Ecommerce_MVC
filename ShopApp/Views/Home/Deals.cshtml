@{
    ViewData["Title"] = "Special Deals - SAKERSTOR";
}

<style>
    :root {
        --primary-color: #8e44ad;
        --accent-color: #ff9f43;
        --text-dark: #1f2937;
        --text-light: #6b7280;
        --bg-light: #f3f4f6;
        --danger: #ef4444;
    }

    .deals-header {
        background: linear-gradient(135deg, var(--primary-color) 0%, #732d91 100%);
        color: white;
        padding: 3rem 1rem;
        text-align: center;
        margin-bottom: 3rem;
        border-radius: 0 0 20px 20px;
        position: relative;
        overflow: hidden;
    }

    .deals-header::before {
        content: '';
        position: absolute;
        top: -50%;
        right: -10%;
        width: 300px;
        height: 300px;
        background: rgba(255, 255, 255, 0.1);
        border-radius: 50%;
    }

    .deals-header h1 {
        font-size: 2.5rem;
        font-weight: 800;
        margin-bottom: 1rem;
        position: relative;
        z-index: 1;
    }

    .deals-header p {
        font-size: 1.1rem;
        opacity: 0.9;
        position: relative;
        z-index: 1;
    }

    .deals-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
        gap: 2rem;
        margin-bottom: 3rem;
    }

    .deal-card {
        background: white;
        border-radius: 12px;
        overflow: hidden;
        box-shadow: 0 2px 8px rgba(0, 0, 0, 0.08);
        transition: all 0.3s ease;
        position: relative;
    }

    .deal-card:hover {
        transform: translateY(-8px);
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.15);
    }

    .deal-image {
        width: 100%;
        height: 200px;
        background: linear-gradient(135deg, var(--primary-color), var(--accent-color));
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 3rem;
        position: relative;
        overflow: hidden;
    }

    .discount-badge {
        position: absolute;
        top: 10px;
        right: 10px;
        background: var(--danger);
        color: white;
        padding: 0.5rem 1rem;
        border-radius: 50px;
        font-weight: 800;
        font-size: 1.2rem;
        box-shadow: 0 4px 12px rgba(239, 68, 68, 0.4);
    }

    .timer-badge {
        position: absolute;
        bottom: 10px;
        left: 10px;
        background: rgba(0, 0, 0, 0.7);
        color: white;
        padding: 0.5rem 1rem;
        border-radius: 8px;
        font-size: 0.85rem;
        font-weight: 600;
    }

    .deal-content {
        padding: 1.5rem;
    }

    .deal-title {
        font-size: 1.3rem;
        font-weight: 700;
        color: var(--text-dark);
        margin-bottom: 0.5rem;
    }

    .deal-description {
        color: var(--text-light);
        font-size: 0.9rem;
        margin-bottom: 1rem;
        line-height: 1.6;
    }

    .price-section {
        display: flex;
        align-items: center;
        gap: 0.5rem;
        margin-bottom: 1rem;
    }

    .original-price {
        color: var(--text-light);
        text-decoration: line-through;
        font-size: 0.9rem;
    }

    .deal-price {
        font-size: 1.5rem;
        font-weight: 800;
        color: var(--primary-color);
    }

    .progress-bar {
        height: 8px;
        background: #e5e7eb;
        border-radius: 4px;
        overflow: hidden;
        margin-bottom: 1rem;
    }

    .progress-fill {
        height: 100%;
        background: linear-gradient(90deg, var(--primary-color), var(--accent-color));
        width: 75%;
    }

    .stock-info {
        font-size: 0.85rem;
        color: var(--text-light);
        margin-bottom: 1rem;
    }

    .deal-btn {
        width: 100%;
        background: var(--primary-color);
        color: white;
        padding: 0.8rem;
        border: none;
        border-radius: 8px;
        font-weight: 700;
        cursor: pointer;
        transition: all 0.3s ease;
        font-size: 1rem;
    }

    .deal-btn:hover {
        background: var(--primary-color);
        transform: translateY(-2px);
        box-shadow: 0 5px 15px rgba(142, 68, 173, 0.3);
    }

    .featured-deals {
        background: linear-gradient(135deg, rgba(142, 68, 173, 0.1), rgba(255, 159, 67, 0.1));
        padding: 2rem;
        border-radius: 12px;
        margin-bottom: 3rem;
        border: 2px solid var(--primary-color);
    }

    .featured-deals h2 {
        color: var(--primary-color);
        font-size: 1.8rem;
        margin-bottom: 1.5rem;
        display: flex;
        align-items: center;
        gap: 0.5rem;
    }

    .featured-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(200px, 1fr));
        gap: 1.5rem;
    }

    .featured-card {
        background: white;
        padding: 1.5rem;
        border-radius: 12px;
        text-align: center;
        box-shadow: 0 2px 8px rgba(0, 0, 0, 0.05);
    }

    .featured-icon {
        font-size: 2.5rem;
        margin-bottom: 0.5rem;
    }

    .featured-card h3 {
        color: var(--text-dark);
        font-weight: 700;
        margin-bottom: 0.5rem;
    }

    .featured-card p {
        color: var(--text-light);
        font-size: 0.9rem;
        margin: 0;
    }

    @@media (max-width: 768px) {
        .deals-header h1 {
            font-size: 2rem;
        }

        .deals-grid {
            grid-template-columns: 1fr;
        }

        .featured-grid {
            grid-template-columns: 1fr;
        }
    }
</style>

