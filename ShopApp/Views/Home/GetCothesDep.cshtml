@model IEnumerable<ShopApp.Models.SubCategory>

<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-md-4 mb-4 text-center">
            <div class="card shadow">
                <img src="~/imageSubCategory/@(item.ImageDepartment ?? "DefultImage.jpg")" class="card-img-top" alt="..." style="height:200px; object-fit:cover;" />
                <div class="card-body">
                    <h5 class="card-title">@item.Name</h5>
                </div>
            </div>
        </div>
    }
</div>
