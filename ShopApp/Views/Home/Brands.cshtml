<style>
    :root {
        --primary-color: #8e44ad;
        --primary-dark: #732d91;
        --accent-color: #ff9f43;
        --text-dark: #1f2937;
        --text-light: #6b7280;
        --bg-light: #f3f4f6;
        --shadow-md: 0 4px 6px -1px rgba(0, 0, 0, 0.1);
        --transition: all 0.3s ease;
    }

    .brands-header {
        background: linear-gradient(135deg, var(--primary-color) 0%, var(--primary-dark) 100%);
        color: white;
        padding: 3rem 1rem;
        border-radius: 0 0 20px 20px;
        text-align: center;
        margin-bottom: 3rem;
    }

    .brands-title {
        font-size: 2.5rem;
        font-weight: 800;
        margin-bottom: 0.5rem;
    }

    .brands-subtitle {
        font-size: 1.1rem;
        opacity: 0.9;
    }

    .brands-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(200px, 1fr));
        gap: 2rem;
        margin-bottom: 3rem;
    }

    .brand-card {
        background: white;
        border-radius: 12px;
        padding: 2rem;
        text-align: center;
        box-shadow: var(--shadow-md);
        transition: var(--transition);
        cursor: pointer;
        border: 2px solid transparent;
    }

    .brand-card:hover {
        transform: translateY(-8px);
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.15);
        border-color: var(--primary-color);
    }

    .brand-logo {
        width: 120px;
        height: 120px;
        margin: 0 auto 1rem;
        background: var(--bg-light);
        border-radius: 12px;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 3rem;
        transition: var(--transition);
    }

    .brand-card:hover .brand-logo {
        background: linear-gradient(135deg, var(--primary-color), var(--accent-color));
        color: white;
        transform: scale(1.1);
    }

    .brand-name {
        font-size: 1.3rem;
        font-weight: 700;
        color: var(--text-dark);
        margin-bottom: 0.5rem;
    }

    .brand-count {
        color: var(--text-light);
        font-size: 0.9rem;
        margin-bottom: 1rem;
    }

    .brand-btn {
        background: var(--primary-color);
        color: white;
        padding: 0.7rem 1.5rem;
        border-radius: 50px;
        border: none;
        cursor: pointer;
        transition: var(--transition);
        font-weight: 600;
        text-decoration: none;
        display: inline-block;
    }

    .brand-btn:hover {
        background: var(--primary-dark);
        transform: scale(1.05);
    }

    @@media (max-width: 768px) {
        .brands-grid {
            grid-template-columns: repeat(auto-fill, minmax(150px, 1fr));
            gap: 1.5rem;
        }

        .brands-title {
            font-size: 2rem;
        }
    }
</style>

