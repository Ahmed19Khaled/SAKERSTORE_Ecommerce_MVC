@model ShopApp.Models.Product
@inject ShopApp.Data.AppDBcontext context
@{
    ViewData["Title"] = Model.Name;
}

<!-- ========== DESIGN SYSTEM (Fully Optimized) ========== -->
<style>
    /* ----- Design Variables ----- */
    :root {
        --primary: #8b5cf6;
        --primary-dark: #6d28d9;
        --primary-light: #ede9fe;
        --secondary: #ec4899;
        --success: #10b981;
        --danger: #ef4444;
        --warning: #f59e0b;
        --gray-50: #f9fafb;
        --gray-100: #f3f4f6;
        --gray-200: #e5e7eb;
        --gray-400: #9ca3af;
        --gray-600: #4b5563;
        --gray-900: #111827;
        --white: #ffffff;
        --shadow-xs: 0 1px 2px rgba(0,0,0,0.02);
        --shadow-sm: 0 1px 3px rgba(0,0,0,0.04), 0 1px 2px rgba(0,0,0,0.02);
        --shadow-md: 0 4px 6px rgba(0,0,0,0.03), 0 2px 4px rgba(0,0,0,0.02);
        --shadow-lg: 0 10px 15px rgba(0,0,0,0.03), 0 4px 6px rgba(0,0,0,0.02);
        --radius-sm: 0.5rem;
        --radius-md: 0.75rem;
        --radius-lg: 1rem;
        --radius-full: 9999px;
        --transition: all 0.18s cubic-bezier(0.4, 0, 0.2, 1);
        --font-sans: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
    }

    * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
    }

    body {
        font-family: var(--font-sans);
        background: #ffffff;
        color: var(--gray-900);
        line-height: 1.5;
    }

    /* ----- Main Container (Flexible) ----- */
    .product-detail {
        max-width: 1280px;
        margin: 0 auto;
        padding: 1rem;
    }

    /* ========== Top Bar (Simple, Elegant, Responsive) ========== */
    .top-bar1 {
        display: flex;
        flex-direction: column;
        gap: 0.75rem;
        margin-bottom: 1.5rem;
    }
    @@media (max-width: 768px) {
        .top-bar1 {
            display:none;
        }
    }

    /* Breadcrumb Navigation – Enhanced Version */
    .breadcrumb {
        display: flex;
        flex-wrap: wrap;
        align-items: center;
        gap: 0.35rem 0.5rem;
        background: var(--white);
        padding: 0.6rem 1rem;
        border-radius: var(--radius-full);
        box-shadow: var(--shadow-xs);
        border: 1px solid var(--gray-200);
        font-size: 0.75rem;
    }

    .breadcrumb-item {
        display: inline-flex;
        align-items: center;
        gap: 0.35rem;
        color: var(--gray-600);
        white-space: nowrap;
    }

        .breadcrumb-item a {
            color: var(--primary);
            text-decoration: none;
            font-weight: 600;
            transition: var(--transition);
            padding: 0.2rem 0.4rem;
            border-radius: var(--radius-sm);
        }

            .breadcrumb-item a:hover {
                background: var(--primary-light);
                color: var(--primary-dark);
            }

        .breadcrumb-item.active {
            color: var(--gray-900);
            font-weight: 700;
            white-space: normal;
            word-break: break-word;
        }

    .breadcrumb-separator {
        color: var(--gray-400);
        font-size: 0.65rem;
    }

    /* Product Navigation (Previous / Next) – Appropriate Size */
    .product-nav {
        display: flex;
        justify-content: space-between;
        gap: 0.75rem;
    }

    .nav-link {
        display: flex;
        align-items: center;
        gap: 0.5rem;
        padding: 0.5rem 1rem;
        background: var(--white);
        border-radius: var(--radius-full);
        border: 1px solid var(--gray-200);
        box-shadow: var(--shadow-xs);
        text-decoration: none;
        color: var(--gray-900);
        font-weight: 500;
        font-size: 0.8rem;
        transition: var(--transition);
        flex: 0 1 auto;
        min-width: 0;
        max-width: 48%;
    }

        .nav-link:hover:not(.disabled) {
            background: var(--primary);
            border-color: var(--primary);
            color: white;
            transform: translateY(-1px);
            box-shadow: var(--shadow-md);
        }

        .nav-link.disabled {
            opacity: 0.5;
            pointer-events: none;
            background: var(--gray-100);
        }

    .nav-icon {
        font-size: 1rem;
        flex-shrink: 0;
    }

    .nav-content {
        overflow: hidden;
        text-overflow: ellipsis;
        white-space: nowrap;
        flex: 1;
    }

    .nav-label {
        font-size: 0.6rem;
        text-transform: uppercase;
        letter-spacing: 0.03em;
        color: var(--gray-600);
        margin-bottom: 0.1rem;
    }

    .nav-link:hover .nav-label {
        color: rgba(255,255,255,0.9);
    }

    .nav-title {
        font-size: 0.8rem;
        font-weight: 700;
        overflow: hidden;
        text-overflow: ellipsis;
    }

    /* ========== Main Grid ========== */
    .product-grid {
        display: grid;
        grid-template-columns: 1fr;
        gap: 2rem;
        margin-bottom: 2.5rem;
    }

    @@media (min-width: 768px) {
        .product-grid {
            grid-template-columns: 1fr 1fr;
            gap: 2.5rem;
        }
    }

    /* ========== GALLERY – FULLY RESPONSIVE ========== */
    .gallery {
        position: relative;
        width: 100%;
    }

    @@media (min-width: 768px) {
        .gallery

    {
        position: sticky;
        top: 1.5rem;
        align-self: flex-start;
    }

    }

    .main-image-wrapper {
        position: relative;
        width: 100%;
        aspect-ratio: 1 / 1;
        background: var(--gray-100);
        border-radius: var(--radius-lg);
        overflow: hidden;
        border: 1px solid var(--gray-200);
        cursor: pointer;
        margin-bottom: 0.75rem;
        transition: box-shadow 0.2s ease;
    }

        .main-image-wrapper:hover {
            box-shadow: var(--shadow-md);
        }

    .main-image {
        width: 100%;
        height: 100%;
        object-fit: contain;
        transition: transform 0.2s ease;
    }

    /* Hint always visible on mobile, appears on hover desktop */
    .zoom-hint {
        position: absolute;
        bottom: 0.75rem;
        right: 0.75rem;
        background: rgba(0,0,0,0.7);
        backdrop-filter: blur(4px);
        color: white;
        padding: 0.5rem 1rem;
        border-radius: var(--radius-full);
        font-size: 0.75rem;
        display: flex;
        align-items: center;
        gap: 0.4rem;
        opacity: 0.9;
        transition: var(--transition);
        pointer-events: none;
    }

    @@media (min-width: 768px) {
        .zoom-hint

    {
        opacity: 0;
    }

    .main-image-wrapper:hover .zoom-hint {
        opacity: 1;
    }

    }

    /* Thumbnails – smooth touch scrolling */
    .thumbnail-strip {
        display: flex;
        gap: 0.5rem;
        overflow-x: auto;
        overflow-y: hidden;
        padding-bottom: 0.25rem;
        scrollbar-width: thin;
        scrollbar-color: var(--primary) var(--gray-200);
        -webkit-overflow-scrolling: touch;
        scroll-snap-type: x mandatory;
    }

    .thumbnail {
        flex: 0 0 auto;
        width: 70px;
        height: 70px;
        border-radius: var(--radius-sm);
        overflow: hidden;
        border: 2px solid transparent;
        transition: var(--transition);
        cursor: pointer;
        background: var(--gray-100);
        scroll-snap-align: start;
    }

    @@media (max-width: 480px) {
        .thumbnail

    {
        width: 60px;
        height: 60px;
    }

    }

    .thumbnail:hover {
        border-color: var(--primary);
        transform: translateY(-2px);
    }

    .thumbnail.active {
        border-color: var(--primary);
        box-shadow: 0 0 0 3px var(--primary-light);
    }

    .thumbnail img {
        width: 100%;
        height: 100%;
        object-fit: cover;
    }

    /* ========== LIGHTBOX MODAL ========== */
    .lightbox {
        display: none;
        position: fixed;
        z-index: 9999;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background-color: rgba(0,0,0,0.95);
        backdrop-filter: blur(8px);
        flex-direction: column;
        align-items: center;
        justify-content: center;
    }

        .lightbox.active {
            display: flex;
        }

    .lightbox-content {
        position: relative;
        max-width: 90vw;
        max-height: 80vh;
        display: flex;
        justify-content: center;
        align-items: center;
    }

    #lightboxImg {
        max-width: 100%;
        max-height: 80vh;
        object-fit: contain;
        border-radius: var(--radius-md);
        box-shadow: var(--shadow-lg);
        cursor: zoom-in;
        transition: transform 0.2s ease;
    }

        #lightboxImg.zoomed {
            transform: scale(2);
            cursor: zoom-out;
        }

    .lightbox-caption {
        position: absolute;
        bottom: -2rem;
        color: white;
        font-size: 0.9rem;
        text-align: center;
        width: 100%;
    }

    .lightbox-close {
        position: absolute;
        top: 1.5rem;
        right: 2rem;
        color: white;
        font-size: 2.5rem;
        font-weight: 300;
        cursor: pointer;
        transition: 0.2s;
        z-index: 10000;
    }

        .lightbox-close:hover {
            color: var(--primary);
        }

    .lightbox-prev,
    .lightbox-next {
        position: absolute;
        top: 50%;
        transform: translateY(-50%);
        color: white;
        font-size: 2.5rem;
        font-weight: 300;
        cursor: pointer;
        padding: 1rem;
        user-select: none;
        transition: 0.2s;
        z-index: 10000;
    }

    .lightbox-prev {
        left: 1rem;
    }

    .lightbox-next {
        right: 1rem;
    }

        .lightbox-prev:hover,
        .lightbox-next:hover {
            color: var(--primary);
        }

    .lightbox-thumbnails {
        display: flex;
        gap: 0.5rem;
        overflow-x: auto;
        padding: 1rem;
        margin-top: 1.5rem;
        max-width: 90vw;
        scrollbar-width: thin;
    }

        .lightbox-thumbnails .thumbnail {
            width: 60px;
            height: 60px;
            border: 2px solid transparent;
            opacity: 0.7;
        }

            .lightbox-thumbnails .thumbnail.active {
                border-color: var(--primary);
                opacity: 1;
            }

    @@media (max-width: 768px) {
        .lightbox-prev, .lightbox-next

    {
        font-size: 2rem;
        padding: 0.5rem;
    }

    .lightbox-close {
        top: 1rem;
        right: 1.5rem;
        font-size: 2rem;
    }

    }
    /* Thumbnails – Smooth Horizontal Scroll */
    .thumbnail-strip {
        display: flex;
        gap: 0.5rem;
        overflow-x: auto;
        padding-bottom: 0.25rem;
        scrollbar-width: thin;
        scrollbar-color: var(--primary) var(--gray-200);
    }

        .thumbnail-strip::-webkit-scrollbar {
            height: 4px;
        }

        .thumbnail-strip::-webkit-scrollbar-track {
            background: var(--gray-200);
            border-radius: var(--radius-full);
        }

        .thumbnail-strip::-webkit-scrollbar-thumb {
            background: var(--primary);
            border-radius: var(--radius-full);
        }

    .thumbnail {
        flex: 0 0 auto;
        width: 64px;
        height: 64px;
        border-radius: var(--radius-sm);
        overflow: hidden;
        border: 2px solid transparent;
        transition: var(--transition);
        cursor: pointer;
        background: var(--gray-100);
    }

        .thumbnail:hover {
            border-color: var(--primary);
            transform: translateY(-2px);
        }

        .thumbnail.active {
            border-color: var(--primary);
            box-shadow: 0 0 0 3px var(--primary-light);
        }

        .thumbnail img {
            width: 100%;
            height: 100%;
            object-fit: cover;
        }

    /* ========== Product Information (Enhanced for Mobile) ========== */
    .info {
        display: flex;
        flex-direction: column;
        gap: 1.25rem;
    }

    .info-header {
        border-bottom: 1px solid var(--gray-200);
        padding-bottom: 1rem;
    }

    .product-title {
        font-size: 1.5rem;
        font-weight: 800;
        letter-spacing: -0.01em;
        line-height: 1.3;
        margin-bottom: 0.5rem;
    }

    @@media (min-width: 768px) {
        .product-title {
            font-size: 2rem;
        }
    }

    }

    .rating {
        display: flex;
        align-items: center;
        gap: 0.5rem;
        flex-wrap: wrap;
    }

    .stars {
        display: flex;
        gap: 0.2rem;
        color: var(--warning);
        font-size: 0.9rem;
    }

    .rating-count {
        font-size: 0.8rem;
        color: var(--gray-600);
    }

    /* Price Card – Simple but Elegant */
    .price-card {
        background: linear-gradient(145deg, var(--primary-light), white);
        padding: 1.25rem;
        border-radius: var(--radius-lg);
        border: 1px solid rgba(139,92,246,0.15);
    }

    .current-price {
        font-size: 2rem;
        font-weight: 800;
        color: var(--primary-dark);
        line-height: 1;
        margin-bottom: 0.25rem;
    }

    @@media (min-width: 768px) {
        .current-price {
            font-size: 2.2rem;
        }
    }

    }

    .price-wrapper {
        display: flex;
        align-items: center;
        gap: 0.75rem;
        flex-wrap: wrap;
    }

    .original-price {
        font-size: 1rem;
        color: var(--gray-400);
        text-decoration: line-through;
    }

    .discount-badge {
        background: linear-gradient(145deg, var(--danger), #dc2626);
        color: white;
        padding: 0.2rem 0.9rem;
        border-radius: var(--radius-full);
        font-weight: 700;
        font-size: 0.75rem;
    }

    /* Details List */
    .detail-list {
        display: flex;
        flex-direction: column;
        gap: 0.5rem;
        background: var(--gray-50);
        border-radius: var(--radius-lg);
        padding: 1rem;
    }

    .detail-item {
        display: flex;
        align-items: center;
        gap: 0.75rem;
        padding: 0.4rem;
        border-radius: var(--radius-sm);
        transition: var(--transition);
    }

        .detail-item:hover {
            background: white;
            box-shadow: var(--shadow-sm);
        }

    .detail-icon {
        width: 36px;
        height: 36px;
        background: var(--primary);
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        color: white;
        font-size: 1rem;
        flex-shrink: 0;
    }

    .detail-content h4 {
        font-size: 0.8rem;
        font-weight: 700;
        margin-bottom: 0.1rem;
    }

    .detail-content p {
        font-size: 0.8rem;
        color: var(--gray-600);
    }

    .stock-badge {
        display: inline-flex;
        align-items: center;
        gap: 0.3rem;
        padding: 0.2rem 0.75rem;
        border-radius: var(--radius-full);
        font-size: 0.7rem;
        font-weight: 700;
    }

    .stock-in {
        background: rgba(16,185,129,0.1);
        color: var(--success);
    }

    .stock-out {
        background: rgba(239,68,68,0.1);
        color: var(--danger);
    }

    /* Color Selection – Integrated Design */
    .option-group {
        margin-bottom: 1.25rem;
    }

    .option-label {
        display: block;
        font-weight: 700;
        font-size: 0.9rem;
        margin-bottom: 0.6rem;
        color: var(--gray-900);
    }

    .color-grid {
        display: flex;
        flex-wrap: wrap;
        gap: 0.5rem;
    }

    .color-item {
        position: relative;
        cursor: pointer;
        padding: 2px;
        border-radius: 50%;
        transition: var(--transition);
    }

        .color-item.selected {
            box-shadow: 0 0 0 2px var(--white), 0 0 0 4px var(--primary-light);
        }

    .color-swatch {
        width: 40px;
        height: 40px;
        border-radius: 50%;
        border: 2px solid white;
        box-shadow: 0 0 0 1px var(--gray-300);
        transition: var(--transition);
    }

    .color-item:hover .color-swatch {
        transform: scale(1.08);
    }

    .stock-info {
        position: absolute;
        bottom: -1.6rem;
        left: 50%;
        transform: translateX(-50%);
        background: var(--gray-900);
        color: white;
        font-size: 0.6rem;
        padding: 0.2rem 0.6rem;
        border-radius: var(--radius-full);
        white-space: nowrap;
        opacity: 0;
        pointer-events: none;
        transition: var(--transition);
        z-index: 5;
    }

    .color-item:hover .stock-info {
        opacity: 1;
        bottom: -2rem;
    }

    /* Quantity Selector – Small and Elegant */
    .quantity-wrapper {
        display: inline-flex;
        align-items: center;
        background: white;
        border-radius: var(--radius-full);
        border: 1px solid var(--gray-200);
        overflow: hidden;
    }

    .quantity-btn {
        width: 38px;
        height: 38px;
        border: none;
        background: var(--gray-100);
        font-size: 1.1rem;
        font-weight: 700;
        color: var(--gray-900);
        cursor: pointer;
        transition: var(--transition);
        display: flex;
        align-items: center;
        justify-content: center;
    }

        .quantity-btn:hover {
            background: var(--primary);
            color: white;
        }

    .quantity-input {
        width: 50px;
        height: 38px;
        border: none;
        text-align: center;
        font-weight: 700;
        font-size: 0.95rem;
        background: transparent;
        color: var(--gray-900);
        outline: none;
    }

    /* Action Buttons – Perfect Size, No Excessive Enlargement */
    .action-group {
        display: flex;
        flex-direction: column;
        gap: 0.75rem;
        margin-top: 1rem;
    }

    @@media (min-width: 480px) {
        .action-group {
            flex-direction: row;
            flex-wrap: wrap;
        }
    }

    }

    .btn {
        display: inline-flex;
        align-items: center;
        justify-content: center;
        gap: 0.5rem;
        padding: 0.7rem 1.2rem;
        border-radius: var(--radius-full);
        font-weight: 700;
        font-size: 0.9rem;
        border: none;
        cursor: pointer;
        transition: var(--transition);
        text-decoration: none;
        line-height: 1;
        white-space: nowrap;
    }

    @@media (max-width: 479px) {
        .btn {
            width: 100%;
            white-space: normal;
            padding: 0.8rem 1rem;
        }
    }

    }

    .btn-primary {
        background: linear-gradient(145deg, var(--primary), var(--primary-dark));
        color: white;
        box-shadow: var(--shadow-sm);
    }

        .btn-primary:hover {
            background: var(--primary-dark);
            transform: translateY(-2px);
            box-shadow: var(--shadow-md);
        }

    .btn-secondary {
        background: white;
        color: var(--primary);
        border: 2px solid var(--primary);
        padding: 0.65rem 1.2rem;
    }

        .btn-secondary:hover {
            background: var(--primary-light);
            transform: translateY(-2px);
        }

    .btn-outline {
        background: white;
        color: var(--gray-700);
        border: 2px solid var(--gray-300);
    }

        .btn-outline:hover {
            background: var(--gray-100);
            border-color: var(--gray-900);
            color: var(--gray-900);
        }

    /* ========== Tabs ========== */
    .tabs-section {
        background: white;
        border-radius: var(--radius-lg);
        padding: 1.5rem 1.25rem;
        margin: 2.5rem 0;
        border: 1px solid var(--gray-200);
    }

    .tabs-header {
        display: flex;
        flex-wrap: wrap;
        gap: 0.25rem;
        margin-bottom: 1.5rem;
        border-bottom: 1px solid var(--gray-200);
        padding-bottom: 0.5rem;
    }

    .tab-btn {
        padding: 0.5rem 1rem;
        background: transparent;
        border: none;
        font-weight: 600;
        font-size: 0.8rem;
        color: var(--gray-600);
        border-radius: var(--radius-full);
        transition: var(--transition);
        cursor: pointer;
    }

        .tab-btn:hover {
            background: var(--gray-100);
            color: var(--primary);
        }

        .tab-btn.active {
            background: var(--primary-light);
            color: var(--primary-dark);
        }

    .tab-pane {
        display: none;
        animation: fade 0.2s ease;
        font-size: 0.9rem;
        line-height: 1.6;
        color: var(--gray-600);
    }

        .tab-pane.active {
            display: block;
        }

    @@keyframes fade {
        from {
            opacity: 0.5;
            transform: translateY(5px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    /* ========== Related Products ========== */
    .related-section {
        margin: 2.5rem 0;
    }

    .section-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 1.25rem;
    }

    .section-title {
        font-size: 1.3rem;
        font-weight: 800;
        letter-spacing: -0.01em;
        padding-left: 0.75rem;
        border-left: 5px solid var(--primary);
    }

    .view-all {
        display: flex;
        align-items: center;
        gap: 0.4rem;
        padding: 0.5rem 1rem;
        background: var(--gray-100);
        border-radius: var(--radius-full);
        text-decoration: none;
        color: var(--gray-900);
        font-weight: 600;
        font-size: 0.8rem;
        transition: var(--transition);
    }

        .view-all:hover {
            background: var(--primary);
            color: white;
        }

    /* ========== Alerts (Toast) ========== */
    .alert {
        position: fixed;
        top: 1rem;
        right: 1rem;
        left: 1rem;
        max-width: 360px;
        margin: 0 auto;
        padding: 0.9rem 1.2rem;
        border-radius: var(--radius-md);
        background: white;
        box-shadow: var(--shadow-lg);
        border-left: 5px solid;
        display: flex;
        align-items: center;
        gap: 0.75rem;
        z-index: 9999;
        animation: slideIn 0.2s ease;
        font-size: 0.9rem;
    }

    @@media (min-width: 640px) {
        .alert {
            left: auto;
            right: 1.5rem;
        }
    }

    }

    .alert-success {
        border-left-color: var(--success);
    }

    .alert-danger {
        border-left-color: var(--danger);
    }

    @@keyframes slideIn {
        from {
            transform: translateX(100%);
            opacity: 0;
        }
        to {
            transform: translateX(0);
