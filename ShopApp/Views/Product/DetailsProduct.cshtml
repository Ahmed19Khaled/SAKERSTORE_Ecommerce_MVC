@section Scripts {

<script>
    // إدارة التبويبات
    function switchTab(tabName) {
        // إخفاء كل المحتويات
        document.querySelectorAll('.tab-content').forEach(tab => {
            tab.classList.remove('active');
        });

        // إزالة النشاط من كل الأزرار
        document.querySelectorAll('.tab-btn').forEach(btn => {
            btn.classList.remove('active');
        });

        // إظهار المحتوى المحدد
        document.getElementById(tabName + 'Tab').classList.add('active');

        // تفعيل الزر المحدد
        event.target.classList.add('active');
    }

    // تغيير الصورة الرئيسية
    function changeMainImage(imageUrl) {
        const mainImage = document.getElementById('mainImage');
        mainImage.src = `/ImgePro/${imageUrl}`;

        // تحديث التصغير النشط
        document.querySelectorAll('.thumbnail').forEach(thumb => {
            thumb.classList.remove('active');
        });
        event.target.closest('.thumbnail').classList.add('active');
    }

    // تكبير الصورة
    const mainImageContainer = document.getElementById('mainImageContainer');
    const mainImage = document.getElementById('mainImage');
    let isZoomed = false;

    mainImageContainer.addEventListener('click', function(e) {
        if (!isZoomed) {
            mainImage.style.transform = 'scale(2)';
            mainImage.style.transformOrigin = `${e.offsetX / mainImage.width * 100}% ${e.offsetY / mainImage.height * 100}%`;
            isZoomed = true;
        } else {
            mainImage.style.transform = 'scale(1)';
            mainImage.style.transformOrigin = 'center center';
            isZoomed = false;
        }
    });

    // اختيار اللون
    function selectColor(element) {
        // إزالة التحديد من كل الألوان
        document.querySelectorAll('.color-option').forEach(option => {
            option.classList.remove('selected');
        });

        // تحديد اللون المختار
        element.classList.add('selected');

        // تحديث المخزن المختار
        const stockId = element.getAttribute('data-stock-id');
            document.getElementById('selectedStockIdprod').value = stockId;

        // تحديث أقصى كمية متاحة
        const maxQuantity = parseInt(element.querySelector('.color-info').textContent.split(' ')[0]);
        document.getElementById('quantityDisplay').max = maxQuantity;

        // إذا كانت الكمية الحالية أكبر من المتاح
        const currentQty = parseInt(document.getElementById('quantityDisplay').value);
        if (currentQty > maxQuantity) {
            document.getElementById('quantityDisplay').value = maxQuantity;
            document.getElementById('quantityInput').value = maxQuantity;
        }
    }

    // التحكم بالكمية
    let quantity = 1;

    function increaseQuantity() {
        const input = document.getElementById('quantityDisplay');
        const max = parseInt(input.max);

        if (quantity < max) {
            quantity++;
            input.value = quantity;
            document.getElementById('quantityInput').value = quantity;
        }
    }

    function decreaseQuantity() {
        if (quantity > 1) {
            quantity--;
            document.getElementById('quantityDisplay').value = quantity;
            document.getElementById('quantityInput').value = quantity;
        }
    }

    // إضافة للسلة مع التأكد من اختيار لون
    document.getElementById('addToCartForm').addEventListener('submit', function(e) {
                const selectedStockIdprod = document.getElementById('selectedStockIdprod').value;

            if (!selectedStockIdprod) {
            e.preventDefault();
            showAlert('يرجى اختيار لون أولاً', 'warning');
            return false;
        }

        if (quantity < 1) {
            e.preventDefault();
            showAlert('الكمية يجب أن تكون على الأقل 1', 'warning');
            return false;
        }
    });

    // إضافة للمفضلة
    function addToWishlist() {
        const productId = '@Model.Id';
        const productName = '@Model.Name';

        // هنا يمكنك إضافة منطق إضافة المنتج للمفضلة
        showAlert(`تمت إضافة ${productName} إلى المفضلة`, 'success');

        // تغيير لون الزر مؤقتاً
        const btn = event.target.closest('button');
        const originalHTML = btn.innerHTML;
        btn.innerHTML = '<i class="bi bi-heart-fill btn-icon"></i> تم الإضافة';
        btn.style.background = '#10b981';

        setTimeout(() => {
            btn.innerHTML = originalHTML;
            btn.style.background = '';
        }, 2000);
    }

    // عرض رسالة تنبيه
    function showAlert(message, type) {
        const alert = document.createElement('div');
        alert.className = `alert alert-${type} alert-message`;
        alert.innerHTML = `
            <div class="d-flex align-items-center gap-2">
                <i class="bi bi-${type === 'success' ? 'check-circle' : 'exclamation-triangle'}-fill fs-5"></i>
                <div>${message}</div>
            </div>
        `;

        document.querySelector('.product-detail-page').appendChild(alert);

        // إزالة الرسالة بعد 5 ثواني
        setTimeout(() => {
            alert.remove();
        }, 5000);
    }

    // تهيئة الصفحة
    document.addEventListener('DOMContentLoaded', function() {
        // إخفاء رسائل التنبيه القديمة بعد 5 ثواني
        setTimeout(() => {
            document.querySelectorAll('.alert-message').forEach(alert => {
                if (alert.classList.contains('alert-danger') || alert.classList.contains('alert-success')) {
                    alert.remove();
                }
            });
        }, 5000);

        // تعيين الحد الأقصى للكمية بناءً على المخزون
        const firstStock = document.querySelector('.color-option.selected');
        if (firstStock) {
            const maxQuantity = parseInt(firstStock.querySelector('.color-info').textContent.split(' ')[0]);
            document.getElementById('quantityDisplay').max = maxQuantity;
        }
    });

    // تأثيرات التمرير
    const observerOptions = {
        threshold: 0.1,
        rootMargin: '0px 0px -50px 0px'
    };

    const observer = new IntersectionObserver((entries) => {
        entries.forEach(entry => {
            if (entry.isIntersecting) {
                entry.target.style.opacity = '1';
                entry.target.style.transform = 'translateY(0)';
            }
        });
    }, observerOptions);

    // ملاحظة العناصر المتحركة
    document.querySelectorAll('.fade-in').forEach(el => {
        observer.observe(el);``
    });
    //selectColor 
    function selectColor(element) {
        // إزالة التحديد من كل الألوان
        document.querySelectorAll('.color-option').forEach(option => {
            option.classList.remove('selected');
        });
        // تحديد اللون المختار
        element.classList.add('selected');
        // تحديث المخزن المختار
        const stockId = element.getAttribute('data-stock-id');
        document.getElementById('selectedStockIdprod').value = stockId;
        // تحديث أقصى كمية متاحة
        const maxQuantity = parseInt(element.querySelector('.color-info').textContent.split(' ')[0]);
        document.getElementById('quantityDisplay').max = maxQuantity;
        // إذا كانت الكمية الحالية أكبر من المتاح
        const currentQty = parseInt(document.getElementById('quantityDisplay').value);
        if (currentQty > maxQuantity) {
            document.getElementById('quantityDisplay').value = maxQuantity;
            document.getElementById('quantityInput').value = maxQuantity;
        }
        }

</script>

