@section Scripts {
<script>
    // ========== 1. تغيير الصورة الرئيسية ==========
    window.changeMainImage = function(imageUrl, thumbnailElement) {
        const mainImage = document.getElementById('mainImage');
        mainImage.src = `/ImgePro/${imageUrl}`;
        document.querySelectorAll('.thumbnail').forEach(thumb => thumb.classList.remove('active'));
        thumbnailElement.classList.add('active');
    };

    // ========== 2. LIGHTBOX – معرض احترافي ==========
    const lightbox = document.getElementById('lightbox');
    const lightboxImg = document.getElementById('lightboxImg');
    const lightboxCaption = document.getElementById('lightboxCaption');
    const lightboxThumbnails = document.getElementById('lightboxThumbnails');

    let currentImageIndex = 0;
    let images = [];

    // جمع جميع الصور من المنتج
    @if (Model.Images != null)
    {
        <text>
        images = @Html.Raw(Json.Serialize(Model.Images.Select(img => new {
            src = "/ImgePro/" + img.ImageURL,
            alt = Model.Name
        })));
        </text>
    }

    // فتح اللايت بوكس
    function openLightbox(index) {
        currentImageIndex = index;
        updateLightboxImage();
        updateLightboxThumbnails();
        lightbox.classList.add('active');
        document.body.style.overflow = 'hidden'; // منع التمرير الخلفي
    }

    // إغلاق اللايت بوكس
    window.closeLightbox = function(event) {
        if (event.target === lightbox || event.target.classList.contains('lightbox-close')) {
            lightbox.classList.remove('active');
            document.body.style.overflow = '';
            lightboxImg.classList.remove('zoomed');
        }
    };

    // تحديث الصورة في اللايت بوكس
    function updateLightboxImage() {
        if (images.length > 0) {
            lightboxImg.src = images[currentImageIndex].src;
            lightboxCaption.textContent = images[currentImageIndex].alt;
        }
    }

    // تحديث الصور المصغرة داخل اللايت بوكس
    function updateLightboxThumbnails() {
        lightboxThumbnails.innerHTML = '';
        images.forEach((img, idx) => {
            const thumb = document.createElement('div');
            thumb.className = `thumbnail ${idx === currentImageIndex ? 'active' : ''}`;
            thumb.innerHTML = `<img src="${img.src}" alt="" loading="lazy">`;
            thumb.onclick = () => {
                currentImageIndex = idx;
                updateLightboxImage();
                updateLightboxThumbnails();
            };
            lightboxThumbnails.appendChild(thumb);
        });
    }

    // تغيير السلايد
    window.changeLightboxSlide = function(direction) {
        currentImageIndex += direction;
        if (currentImageIndex >= images.length) currentImageIndex = 0;
        if (currentImageIndex < 0) currentImageIndex = images.length - 1;
        updateLightboxImage();
        updateLightboxThumbnails();
    };

    // تكبير الصورة داخل اللايت بوكس (double‑tap / click)
    lightboxImg.addEventListener('click', function(e) {
        e.stopPropagation();
        this.classList.toggle('zoomed');
    });

    // ربط الصورة الرئيسية باللايت بوكس
    document.getElementById('mainImageWrapper').addEventListener('click', function() {
        if (images.length > 0) {
            openLightbox(0);
        }
    });

    // التنقل بلوحة المفاتيح
    document.addEventListener('keydown', function(e) {
        if (!lightbox.classList.contains('active')) return;
        if (e.key === 'Escape') {
            lightbox.classList.remove('active');
            document.body.style.overflow = '';
            lightboxImg.classList.remove('zoomed');
        }
        if (e.key === 'ArrowLeft') changeLightboxSlide(-1);
        if (e.key === 'ArrowRight') changeLightboxSlide(1);
    });

    // ========== 3. الكمية والألوان (كما هي) ==========
    // ... (الشفرة القديمة للكمية والألوان تبقى كما هي)
    window.selectColor = function(element) {
        document.querySelectorAll('.color-item').forEach(el => el.classList.remove('selected'));
        element.classList.add('selected');
        const stockId = element.dataset.stockId;
        const maxQty = parseInt(element.dataset.maxQty, 10);
        document.getElementById('selectedStockId').value = stockId;
        const qtyInput = document.getElementById('quantityDisplay');
        qtyInput.max = maxQty;
        if (parseInt(qtyInput.value, 10) > maxQty) {
            qtyInput.value = maxQty;
            document.getElementById('quantityInput').value = maxQty;
        }
    };

    window.increaseQuantity = function() {
        const input = document.getElementById('quantityDisplay');
        let val = parseInt(input.value, 10);
        const max = parseInt(input.max, 10);
        if (val < max) {
            val++;
            input.value = val;
            document.getElementById('quantityInput').value = val;
        }
    };
    window.decreaseQuantity = function() {
        const input = document.getElementById('quantityDisplay');
        let val = parseInt(input.value, 10);
        if (val > 1) {
            val--;
            input.value = val;
            document.getElementById('quantityInput').value = val;
        }
    };

    // ========== 4. إضافة إلى المفضلة (تجريبي) ==========
    window.addToWishlist = function(id, name) {
        showToast(`✨ Added "${name}" to wishlist`, 'success');
    };

    // ========== 5. التبويبات ==========
    window.switchTab = function(event, tabId) {
        event.preventDefault();
        document.querySelectorAll('.tab-pane').forEach(p => p.classList.remove('active'));
        document.querySelectorAll('.tab-btn').forEach(b => b.classList.remove('active'));
        document.getElementById(tabId).classList.add('active');
        event.target.classList.add('active');
    };

    // ========== 6. رسائل Toast ==========
    function showToast(message, type = 'success') {
        const toast = document.createElement('div');
        toast.className = `alert alert-${type}`;
        toast.innerHTML = `<i class="bi bi-${type === 'success' ? 'check-circle' : 'exclamation-triangle'}-fill"></i><span>${message}</span>`;
        document.body.appendChild(toast);
        setTimeout(() => {
            toast.style.opacity = '0';
            setTimeout(() => toast.remove(), 300);
        }, 4000);
    }

    // ========== 7. التحقق من صحة النموذج ==========
    document.getElementById('addToCartForm')?.addEventListener('submit', function(e) {
        const stockId = document.getElementById('selectedStockId').value;
        if (!stockId) {
            e.preventDefault();
            showToast('Please select a color', 'danger');
            return false;
        }
        const qty = parseInt(document.getElementById('quantityDisplay').value, 10);
        if (qty < 1) {
            e.preventDefault();
            showToast('Invalid quantity', 'danger');
            return false;
        }
    });

    // ========== 8. إخفاء التنبيهات تلقائياً ==========
    document.addEventListener('DOMContentLoaded', function() {
        setTimeout(() => {
            document.querySelectorAll('.alert').forEach(el => {
                if (el.classList.contains('alert-success') || el.classList.contains('alert-danger')) {
                    el.style.opacity = '0';
                    setTimeout(() => el.remove(), 300);
                }
            });
        }, 5000);
    });
</script>}

