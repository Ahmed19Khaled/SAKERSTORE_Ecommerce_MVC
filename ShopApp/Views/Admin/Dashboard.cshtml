@model ShopApp.ViewModel.AdminDashboardViewModel
@using System.Text.Json

@{
    ViewData["Title"] = "Dashboard";
    Layout = "_AdminLayout";
}

<style>
    /* ========== Design Variables – Light, Clean, Professional ========== */
    :root {
        --dash-bg: #f8fafc;
        --dash-card-bg: #ffffff;
        --dash-border: #e9edf2;
        --dash-text-primary: #0f172a;
        --dash-text-secondary: #475569;
        --dash-text-muted: #64748b;
        --dash-accent: #2563eb;
        --dash-accent-light: #dbeafe;
        --dash-success: #10b981;
        --dash-success-light: #d1fae5;
        --dash-danger: #ef4444;
        --dash-danger-light: #fee2e2;
        --dash-warning: #f59e0b;
        --dash-warning-light: #fef3c7;
        --dash-purple: #8b5cf6;
        --dash-purple-light: #ede9fe;
        --dash-shadow: 0 4px 12px rgba(0, 0, 0, 0.02), 0 2px 6px rgba(0, 0, 0, 0.01);
        --dash-shadow-hover: 0 12px 24px -8px rgba(0, 0, 0, 0.08);
        --dash-radius: 20px;
        --dash-radius-sm: 16px;
        --dash-transition: all 0.2s cubic-bezier(0.4, 0, 0.2, 1);
    }

    body {
        background-color: var(--dash-bg);
        font-family: 'Inter', system-ui, -apple-system, BlinkMacSystemFont, sans-serif;
    }

    /* ========== Stats Cards ========== */
    .stat-card {
        background-color: var(--dash-card-bg);
        border: 1px solid var(--dash-border);
        border-radius: var(--dash-radius);
        padding: 1.5rem 1.2rem;
        box-shadow: var(--dash-shadow);
        transition: var(--dash-transition);
        position: relative;
        overflow: hidden;
        height: 100%;
        display: flex;
        flex-direction: column;
        justify-content: space-between;
    }

        .stat-card:hover {
            box-shadow: var(--dash-shadow-hover);
            transform: translateY(-4px);
            border-color: transparent;
        }

    .stat-icon {
        width: 48px;
        height: 48px;
        border-radius: 16px;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 1.6rem;
        margin-bottom: 1rem;
    }

        .stat-icon.blue {
            background-color: var(--dash-accent-light);
            color: var(--dash-accent);
        }

        .stat-icon.red {
            background-color: var(--dash-danger-light);
            color: var(--dash-danger);
        }

        .stat-icon.green {
            background-color: var(--dash-success-light);
            color: var(--dash-success);
        }

        .stat-icon.orange {
            background-color: var(--dash-warning-light);
            color: var(--dash-warning);
        }

        .stat-icon.purple {
            background-color: var(--dash-purple-light);
            color: var(--dash-purple);
        }

    .stat-label {
        font-size: 0.85rem;
        text-transform: uppercase;
        letter-spacing: 0.5px;
        color: var(--dash-text-muted);
        font-weight: 600;
        margin-bottom: 0.25rem;
    }

    .stat-value {
        font-size: 2rem;
        font-weight: 700;
        color: var(--dash-text-primary);
        line-height: 1.2;
        margin-bottom: 0.25rem;
    }

    .stat-trend {
        font-size: 0.8rem;
        display: flex;
        align-items: center;
        gap: 0.25rem;
        font-weight: 500;
    }

    .trend-up {
        color: var(--dash-success);
    }

    .trend-down {
        color: var(--dash-danger);
    }

    /* ========== Chart Container ========== */
    .chart-container {
        background-color: var(--dash-card-bg);
        border-radius: var(--dash-radius);
        border: 1px solid var(--dash-border);
        padding: 1.5rem;
        margin-top: 1.8rem;
        box-shadow: var(--dash-shadow);
        height: 400px;
        display: flex;
        flex-direction: column;
    }

    .chart-wrapper {
        flex: 1;
        position: relative;
        min-height: 0;
    }

    .chart-title {
        font-size: 1.1rem;
        font-weight: 600;
        color: var(--dash-text-primary);
        margin-bottom: 1.2rem;
        display: flex;
        align-items: center;
        gap: 0.6rem;
        flex-shrink: 0;
    }

        .chart-title i {
            color: var(--dash-accent);
        }

    /* ========== Modern Tables ========== */
    .modern-table {
        width: 100%;
        border-collapse: collapse;
    }

        .modern-table thead th {
            background-color: transparent;
            color: var(--dash-text-muted);
            font-weight: 600;
            font-size: 0.8rem;
            text-transform: uppercase;
            letter-spacing: 0.5px;
            padding: 1rem 0.75rem;
            border-bottom: 1px solid var(--dash-border);
        }

        .modern-table tbody td {
            padding: 1rem 0.75rem;
            color: var(--dash-text-secondary);
            border-bottom: 1px solid var(--dash-border);
            vertical-align: middle;
            background-color: transparent !important;
        }

        .modern-table tbody tr:hover td {
            background-color: #f1f5f9 !important;
        }

    .product-thumb {
        width: 48px;
        height: 48px;
        border-radius: 12px;
        object-fit: cover;
        border: 1px solid var(--dash-border);
        background-color: white;
    }

    .badge-available {
        background-color: var(--dash-success-light);
        color: var(--dash-success);
        padding: 0.35rem 0.8rem;
        border-radius: 40px;
        font-size: 0.75rem;
        font-weight: 600;
        display: inline-block;
    }

    .badge-unavailable {
        background-color: var(--dash-danger-light);
        color: var(--dash-danger);
        padding: 0.35rem 0.8rem;
        border-radius: 40px;
        font-size: 0.75rem;
        font-weight: 600;
        display: inline-block;
    }

    /* ========== Profile Card (Sidebar) ========== */
    .profile-card {
        background-color: var(--dash-card-bg);
        border: 1px solid var(--dash-border);
        border-radius: var(--dash-radius);
        padding: 1.8rem 1.5rem;
        box-shadow: var(--dash-shadow);
        margin-bottom: 1.5rem;
        text-align: center;
    }

    .profile-avatar {
        width: 100px;
        height: 100px;
        border-radius: 28px;
        object-fit: cover;
        border: 4px solid white;
        box-shadow: 0 8px 20px rgba(0,0,0,0.02);
        margin-bottom: 1rem;
    }

    .profile-name {
        font-size: 1.25rem;
        font-weight: 700;
        color: var(--dash-text-primary);
        margin-bottom: 0.25rem;
    }

    .profile-role {
        color: var(--dash-text-muted);
        font-size: 0.9rem;
        margin-bottom: 1.2rem;
    }

    .profile-stats {
        display: flex;
        justify-content: space-around;
        margin: 1.5rem 0;
        padding: 1rem 0;
        border-top: 1px solid var(--dash-border);
        border-bottom: 1px solid var(--dash-border);
    }

    .stat-item {
        text-align: center;
    }

    .stat-number {
        font-size: 1.3rem;
        font-weight: 700;
        color: var(--dash-text-primary);
    }

    .seller-badge {
        background: linear-gradient(95deg, #f59e0b20, #f59e0b10);
        color: #b45309;
        padding: 0.6rem 1rem;
        border-radius: 40px;
        font-size: 0.9rem;
        font-weight: 600;
        display: inline-flex;
        align-items: center;
        justify-content: center;
        gap: 0.5rem;
        width: 100%;
        border: 1px solid #f59e0b30;
    }

    /* ========== Order List ========== */
    .order-list {
        background-color: var(--dash-card-bg);
        border: 1px solid var(--dash-border);
        border-radius: var(--dash-radius);
        padding: 1.5rem;
    }

    .order-item {
        display: flex;
        align-items: center;
        padding: 0.8rem 0;
        border-bottom: 1px solid var(--dash-border);
        cursor: pointer;
        transition: var(--dash-transition);
    }

        .order-item:last-child {
            border-bottom: none;
        }

        .order-item:hover {
            background-color: #f8fafc;
            padding-left: 0.5rem;
        }

    .order-img {
        width: 48px;
        height: 48px;
        border-radius: 12px;
        object-fit: cover;
        margin-right: 1rem;
        border: 1px solid var(--dash-border);
    }

    .order-info {
        flex: 1;
    }

    .order-name {
        font-weight: 600;
        color: var(--dash-text-primary);
        margin-bottom: 0.1rem;
    }

    .order-amount {
        color: var(--dash-success);
        font-weight: 700;
    }

    .see-all-link {
        display: block;
        text-align: center;
        margin-top: 1.2rem;
        color: var(--dash-accent);
        font-weight: 600;
        text-decoration: none;
    }

        .see-all-link:hover {
            text-decoration: underline;
        }

    /* ========== Responsive Improvements ========== */
    @@media (max-width: 768px) {
        .stat-value {
            font-size: 1.6rem;
        }

        .profile-card {
            padding: 1.5rem 1rem;
        }

        .chart-container {
            height: 350px;
        }

        .modern-table thead {
            display: none;
        }

        .modern-table tbody td {
            display: block;
            width: 100%;
            text-align: right;
            padding-left: 50%;
            position: relative;
            border-bottom: none;
        }

            .modern-table tbody td:before {
                content: attr(data-label);
                position: absolute;
                left: 1rem;
                width: 45%;
                font-weight: 600;
                color: var(--dash-text-muted);
                text-align: left;
            }

        .modern-table tbody tr {
            display: block;
            margin-bottom: 1.5rem;
            border: 1px solid var(--dash-border);
            border-radius: var(--dash-radius-sm);
            padding: 1rem;
        }

        .product-thumb {
            width: 60px;
            height: 60px;
        }
    }
</style>

<div class="container-fluid px-0">
    <!-- Main Row -->
    <div class="row g-4">
        <!-- Main Column (Primary Content) -->
        <div class="col-xl-9 col-lg-8">
            <!-- Quick Stats Cards -->
            <div class="row g-3 mb-2">
                <div class="col-sm-6 col-md-4 col-xl-3">
                    <div class="stat-card">
                        <div class="stat-icon blue">
                            <i class="fas fa-dollar-sign"></i>
                        </div>
                        <div class="stat-label">Total Revenue</div>
                        <div class="stat-value">$@Model.TotalRevenue.ToString("N0")</div>
                        <div class="stat-trend">
                            <span class="trend-up"><i class="fas fa-arrow-up"></i> +24%</span>
                            <span class="text-muted ms-1">from last month</span>
                        </div>
                    </div>
                </div>
                <div class="col-sm-6 col-md-4 col-xl-3">
                    <div class="stat-card">
                        <div class="stat-icon red">
                            <i class="fas fa-credit-card"></i>
                        </div>
                        <div class="stat-label">Total Expenses</div>
                        <div class="stat-value">$@Model.TotalExpenses.ToString("N0")</div>
                        <div class="stat-trend">
                            <span class="trend-down"><i class="fas fa-arrow-down"></i> -32%</span>
                            <span class="text-muted ms-1">from last month</span>
                        </div>
                    </div>
                </div>
                <div class="col-sm-6 col-md-4 col-xl-3">
                    <div class="stat-card">
                        <div class="stat-icon green">
                            <i class="fas fa-users"></i>
                        </div>
                        <div class="stat-label">Total Visitors</div>
                        <div class="stat-value">@Model.TotalVisitors.ToString("N0")</div>
                        <div class="stat-trend">
                            <span class="trend-up"><i class="fas fa-arrow-up"></i> +48%</span>
                            <span class="text-muted ms-1">from last month</span>
                        </div>
                    </div>
                </div>
                <div class="col-sm-6 col-md-4 col-xl-3">
                    <div class="stat-card">
                        <div class="stat-icon orange">
                            <i class="fas fa-shopping-cart"></i>
                        </div>
                        <div class="stat-label">Total Orders</div>
                        <div class="stat-value">@Model.TotalOrders.ToString("N0")</div>
                        <div class="stat-trend">
                            <span class="trend-down"><i class="fas fa-arrow-down"></i> -12%</span>
                            <span class="text-muted ms-1">from last month</span>
                        </div>
                    </div>
                </div>
                <div class="col-sm-6 col-md-4 col-xl-3">
                    <div class="stat-card">
                        <div class="stat-icon purple">
                            <i class="fas fa-calendar-day"></i>
                        </div>
                        <div class="stat-label">Today's Orders</div>
                        <div class="stat-value">@Model.ordertoday.ToString("N0")</div>
                        <div class="stat-trend">
                            <span class="trend-up"><i class="fas fa-arrow-up"></i> +12%</span>
                            <span class="text-muted ms-1">from yesterday</span>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Monthly Income Chart -->
            <div class="chart-container">
                <div class="chart-title">
                    <i class="fas fa-chart-line"></i>
                    <span>Monthly Income</span>
                </div>
                <div class="chart-wrapper">
                    <canvas id="incomeChart"></canvas>
                </div>
            </div>

            <!-- Top Selling Products Table -->
            <div class="mt-4">
                <div class="d-flex align-items-center justify-content-between mb-3">
                    <h5 class="fw-bold" style="color: var(--dash-text-primary);">
                        <i class="fas fa-crown me-2" style="color: #f59e0b;"></i> Top Selling Products
                    </h5>
                    <span class="text-muted small">Last 30 days</span>
                </div>
                <div class="table-responsive">
                    <table class="modern-table">
                        <thead>
                            <tr>
                                <th>Image</th>
                                <th>Product Name</th>
                                <th>Sale Date</th>
                                <th>Category</th>
                                <th>Price</th>
                                <th>Qty Sold</th>
                                <th>Availability</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var product in Model.TopProducts)
                            {
                                <tr>
                                    <td data-label="Image">
                                        <img src="/ImgePro/@product.ImageUrl" class="product-thumb" alt="@product.ProductName">
                                    </td>
                                    <td data-label="Product Name" class="fw-semibold" style="color: var(--dash-text-primary);">
                                        @product.ProductName
                                    </td>
                                    <td data-label="Sale Date">@product.SaleDate.ToString("dd MMM, yyyy")</td>
                                    <td data-label="Category">
                                        <span class="badge bg-light text-dark px-3 py-2 rounded-pill">@product.Category</span>
                                    </td>
                                    <td data-label="Price" class="fw-bold" style="color: var(--dash-success);">
                                        $@product.Price.ToString("N2")
                                    </td>
                                    <td data-label="Qty Sold" class="fw-bold" style="color: var(--dash-accent);">
                                        @product.TotalSold
                                    </td>
                                    <td data-label="Availability">
                                        @if (product.isavilabel)
                                        {
                                            <span class="badge-available">
                                                <i class="fas fa-check-circle me-1"></i> In Stock
                                            </span>
                                            <div class="mt-1 small text-muted">@product.TotalQTY units</div>
                                        }
                                        else
                                        {
                                            <span class="badge-unavailable">
                                                <i class="fas fa-times-circle me-1"></i> Out of Stock
                                            </span>
                                        }
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

        <!-- Sidebar Column (Profile + Latest Orders) -->
        <div class="col-xl-3 col-lg-4">
            <!-- Profile Card -->
            <div class="profile-card">
                <img src="~/ImageProfile/@Model.imageuser" class="profile-avatar" alt="@Model.User?.FullName">
                <h3 class="profile-name">@Model.User?.FullName</h3>
                <div class="profile-role">
                    <i class="fas fa-shield-alt me-1"></i> Store Manager
                </div>
                <a href="/Admin/EditProfile" class="btn btn-outline-primary rounded-pill px-4 py-2 mb-3" style="border-width: 1.5px;">
                    <i class="fas fa-user-edit me-1"></i> Edit Profile
                </a>

                <div class="profile-stats">
                    <div class="stat-item">
                        <div class="stat-number">@Model.ProductsCount</div>
                        <div class="stat-label">Products</div>
                    </div>
                    <div class="stat-item">
                        <div class="stat-number">@Model.Followers.ToString("N0")</div>
                        <div class="stat-label">Followers</div>
                    </div>
                </div>

                <div class="seller-badge mb-2">
                    <i class="fas fa-star text-warning"></i>
                    <span>Top Seller</span>
                </div>
                <div class="progress" style="height: 6px; background-color: #e2e8f0; border-radius: 30px;">
                    <div class="progress-bar bg-warning" style="width: 85%; border-radius: 30px;"></div>
                </div>
                <div class="d-flex justify-content-between mt-2 small text-muted">
                    <span>Performance Level</span>
                    <span class="fw-bold">85%</span>
                </div>
            </div>

            <!-- Latest Orders -->
            <div class="order-list">
                <h5 class="fw-bold mb-3" style="color: var(--dash-text-primary);">
                    <i class="fas fa-clock me-2" style="color: var(--dash-accent);"></i> Latest Orders
                </h5>
                @foreach (var order in Model.LatestOrders.Take(5))
                {
                    var firstProduct = order.Items?.FirstOrDefault()?.Product;
                    var firstImage = firstProduct?.Images?.FirstOrDefault()?.ImageURL;
                    <div class="order-item" onclick="window.location.href='@Url.Action("Details", "OrderManeg", new { orderId = order.Id })'">
                        <img src="~/ImgePro/@firstImage" class="order-img" alt="Order" onerror="this.src='/images/placeholder.png'">
                        <div class="order-info">
                            <div class="order-name">@order.FullName</div>
                            <div class="d-flex justify-content-between align-items-center">
                                <span class="text-muted small"><i class="fas fa-box me-1"></i>@order.Items?.Count() items</span>
                                <span class="order-amount">$@order.TotalAmount.ToString("N2")</span>
                            </div>
                        </div>
                    </div>
                }
                <a asp-action="GetAllOrder" asp-controller="OrderManeg" class="see-all-link">
                    View All Orders <i class="fas fa-arrow-right ms-1"></i>
                </a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            const ctx = document.getElementById('incomeChart').getContext('2d');

            // Data from ViewModel
            const months = @Html.Raw(JsonSerializer.Serialize(Model.MonthlyIncome.Select(m => m.Month)));
            const amounts = @Html.Raw(JsonSerializer.Serialize(Model.MonthlyIncome.Select(m => m.Amount)));

            new Chart(ctx, {
                type: 'bar',
                data: {
                    labels: months,
                    datasets: [{
                        label: 'Income',
                        data: amounts,
                        backgroundColor: 'rgba(37, 99, 235, 0.8)',
                        borderRadius: 8,
                        barPercentage: 0.6,
                        categoryPercentage: 0.8
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: true,
                    plugins: {
                        legend: { display: false },
                        tooltip: {
                            callbacks: {
                                label: (context) => `$${context.raw.toLocaleString()}`
                            },
                            backgroundColor: '#0f172a',
                            titleColor: '#f1f5f9',
                            bodyColor: '#e2e8f0',
                            padding: 12,
                            cornerRadius: 12
                        }
                    },
                    scales: {
                        y: {
                            beginAtZero: true,
                            grid: { color: '#e9edf2' },
                            ticks: {
                                callback: (value) => '$' + value.toLocaleString(),
                                color: '#64748b'
                            }
                        },
                        x: {
                            grid: { display: false },
                            ticks: { color: '#64748b' }
                        }
                    }
                }
            });
        });
    </script>
}