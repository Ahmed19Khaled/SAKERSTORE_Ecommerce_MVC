                            <a asp-action="OrderConfirmation" asp-controller="Order"
                               asp-route-orderId="@order.Id" class="dropdown-item">
                                <i class="fas fa-truck"></i>
                                <span>Track Order</span>
                                <span class="badge bg-warning ms-auto">Active</span>
                            </a>
                        </li>
                    }

                    @* <li>
                        <a asp-action="Wishlist" asp-controller="Account" class="dropdown-item">
                            <i class="fas fa-heart"></i>
                            <span>Wishlist</span>
                        </a>
