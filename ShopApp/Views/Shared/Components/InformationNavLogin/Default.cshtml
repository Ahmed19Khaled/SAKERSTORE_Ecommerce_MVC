@model ShopApp.Models.User
@inject ShopApp.Data.AppDBcontext context
@{
    var userId = User.FindFirst(System.Security.Claims.ClaimTypes.NameIdentifier)?.Value;

    var order = context.Orders
     .OrderByDescending(x => x.Id)
     .Where(X => X.Status != "Cancelled" && X.Status != "FailedDelivery" && X.Status != "Delivery")
     .FirstOrDefault(o => o.UserId == userId);
}

<style>
    /* Container Styles */
    .user-component-wrapper {
        position: relative;
    }

    /* User Container for Desktop */
    .user-container {
        position: relative;
        background-color: transparent;
        padding: 6px 8px;
        border-radius: 8px;
        display: flex;
        align-items: center;
        gap: 8px;
        cursor: pointer;
        transition: all 0.3s ease;
        min-width: 0;
        max-width: 220px;
    }

        .user-container:hover {
            background-color: rgba(142, 68, 173, 0.05);
        }

    /* Profile Image */
    .profile-image {
        width: 36px;
        height: 36px;
        object-fit: cover;
        border-radius: 50%;
        border: 2px solid rgba(142, 68, 173, 0.2);
        flex-shrink: 0;
    }

    /* User Info */
    .user-info {
        display: flex;
        flex-direction: column;
        align-items: flex-start;
        min-width: 0;
        overflow: hidden;
        flex: 1;
    }

    .user-greeting {
        font-size: 0.75rem;
        color: #6b7280;
        font-weight: 400;
        white-space: nowrap;
    }

    .user-name {
        font-size: 0.875rem;
        font-weight: 600;
        color: #1f2937;
        white-space: nowrap;
        overflow: hidden;
        text-overflow: ellipsis;
        max-width: 140px;
        display: block;
    }

    /* Dropdown Menu */
    .user-dropdown {
        display: none;
        position: absolute;
        top: calc(100% + 8px);
        right: 55px;
        background: white;
        border: 1px solid #e5e7eb;
        border-radius: 12px;
        box-shadow: 0 10px 25px rgba(0, 0, 0, 0.1), 0 5px 10px rgba(0, 0, 0, 0.05);
        padding: 12px 0;
        min-width: 220px;
        z-index: 2000;
        animation: dropdownFade 0.2s ease-out;
    }

        .user-dropdown.show {
            display: block;
        }

    /* Dropdown Header */
    .dropdown-header {
        padding: 12px 16px;
        border-bottom: 1px solid #f3f4f6;
        display: flex;
        align-items: center;
        gap: 12px;
    }

    .dropdown-header-img {
        width: 48px;
        height: 48px;
        object-fit: cover;
        border-radius: 50%;
        border: 2px solid #8e44ad;
    }

    .dropdown-header-info {
        flex: 1;
        min-width: 0;
    }

    .dropdown-header-name {
        font-weight: 600;
        font-size: 0.95rem;
        color: #1f2937;
        white-space: nowrap;
        overflow: hidden;
        text-overflow: ellipsis;
    }

    .dropdown-header-email {
        font-size: 0.8rem;
        color: #6b7280;
        white-space: nowrap;
        overflow: hidden;
        text-overflow: ellipsis;
    }

    /* Dropdown List */
    .dropdown-list {
        list-style: none;
        padding: 0;
        margin: 0;
    }

    .dropdown-item {
        display: flex;
        align-items: center;
        gap: 12px;
        padding: 12px 16px;
        color: #374151;
        text-decoration: none;
        transition: all 0.2s ease;
        border-left: 3px solid transparent;
    }

        .dropdown-item:hover {
            background-color: #f9fafb;
            color: #8e44ad;
            border-left-color: #8e44ad;
        }

        .dropdown-item i {
            width: 20px;
            text-align: center;
            font-size: 1rem;
            color: #6b7280;
        }

        .dropdown-item:hover i {
            color: #8e44ad;
        }

    .dropdown-divider {
        height: 1px;
        background-color: #f3f4f6;
        margin: 8px 0;
    }

    .dropdown-footer {
        padding: 12px 16px 0;
        border-top: 1px solid #f3f4f6;
        margin-top: 8px;
    }

    /* Login/Register Buttons */
    .auth-buttons {
        display: flex;
        gap: 8px;
        flex-wrap: nowrap;
    }

    .auth-btn {
        padding: 6px 12px;
        border-radius: 6px;
        font-size: 0.875rem;
        font-weight: 500;
        transition: all 0.3s ease;
        text-decoration: none;
        display: flex;
        align-items: center;
        justify-content: center;
        white-space: nowrap;
    }

    .auth-btn-login {
        background-color: #8e44ad;
        color: white;
        border: 1px solid #8e44ad;
    }

        .auth-btn-login:hover {
            background-color: #732d91;
            border-color: #732d91;
            color: white;
        }

    .auth-btn-register {
        background-color: transparent;
        color: #8e44ad;
        border: 1px solid #8e44ad;
    }

        .auth-btn-register:hover {
            background-color: rgba(142, 68, 173, 0.05);
        }

