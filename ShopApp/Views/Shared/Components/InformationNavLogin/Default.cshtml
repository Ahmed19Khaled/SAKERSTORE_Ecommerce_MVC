    <div class="user-component-wrapper">
        <!-- User Container for Desktop -->
        <div class="user-container" id="userMenu">
            <img src="~/ImageProfile/@(Model.ProfilePictureUrl == null ? "profile.png" : Model.ProfilePictureUrl)"
                 class="profile-image"
                 alt="@Model.FullName's profile picture"
                 onerror="this.src='/ImageProfile/default-profile.png'" />

            <div class="user-info d-none d-lg-block">
                <span class="user-greeting">Hello,</span>
                <span class="user-name" title="@Model.FullName">
                    @Model.FullName
                </span>
            </div>

            <i class="fas fa-chevron-down dropdown-arrow d-none d-lg-block"></i>
        </div>

        <!-- Mobile Overlay -->
        <div class="mobile-dropdown-overlay" id="mobileOverlay"></div>

        <!-- Dropdown Menu -->
        <div class="user-dropdown" id="userDropdown">
            <!-- Dropdown Header -->
            <div class="dropdown-header">
                <img src="~/ImageProfile/@(string.IsNullOrEmpty(Model.ProfilePictureUrl) ? "profile.png" : Model.ProfilePictureUrl)"
                     class="dropdown-header-img"
                     alt="Profile"
                     onerror="this.src='/ImageProfile/default-profile.png'" />
                <div class="dropdown-header-info">
                    <div class="dropdown-header-name">@Model.FullName</div>
                    <div class="dropdown-header-email">@Model.Email</div>
                </div>
                <button class="btn-close d-lg-none" id="closeDropdown">
                </button>
            </div>

            <!-- Dropdown Content -->
            <div class="dropdown-content">
                <ul class="dropdown-list">
                    <li>
                        <a asp-action="Manage" asp-controller="Account" class="dropdown-item">
                            <i class="fas fa-user-circle"></i>
                            <span>My Account</span>
                        </a>
                    </li>

                    @* <li>
                        <a asp-action="Orders" asp-controller="Order" class="dropdown-item">
                            <i class="fas fa-shopping-bag"></i>
                            <span>My Orders</span>
