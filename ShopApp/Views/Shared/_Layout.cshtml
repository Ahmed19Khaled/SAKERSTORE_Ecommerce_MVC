        document.addEventListener('DOMContentLoaded', function() {
            // Mobile Search Toggle with enhanced UX
            const mobileSearchToggle = document.getElementById('mobileSearchToggle');
            const mobileSearchOverlay = document.getElementById('mobileSearchOverlay');
            const closeSearch = document.getElementById('closeSearch');
            const searchInput = mobileSearchOverlay?.querySelector('input');

            if (mobileSearchToggle && mobileSearchOverlay) {
                mobileSearchToggle.addEventListener('click', function() {
                    mobileSearchOverlay.classList.add('active');
                    document.body.classList.add('no-scroll');
                    setTimeout(() => {
                        if (searchInput) {
                            searchInput.focus();
                            searchInput.setAttribute('data-focused', 'true');
                        }
                    }, 300);

                    // Add keyboard open animation
                    mobileSearchToggle.style.animation = 'pulse 0.5s ease';
                    setTimeout(() => {
                        mobileSearchToggle.style.animation = '';
                    }, 500);
                });
            }

            if (closeSearch) {
                closeSearch.addEventListener('click', function() {
                    mobileSearchOverlay.classList.remove('active');
                    document.body.classList.remove('no-scroll');
                    if (searchInput) {
                        searchInput.blur();
                        searchInput.removeAttribute('data-focused');
                    }
                });
            }

            // Close overlay when clicking outside
            if (mobileSearchOverlay) {
                mobileSearchOverlay.addEventListener('click', function(e) {
                    if (e.target === mobileSearchOverlay) {
                        mobileSearchOverlay.classList.remove('active');
                        document.body.classList.remove('no-scroll');
                    }
                });
            }

            // Close overlay with Escape key
            document.addEventListener('keydown', function(e) {
                if (e.key === 'Escape' && mobileSearchOverlay?.classList.contains('active')) {
                    mobileSearchOverlay.classList.remove('active');
                    document.body.classList.remove('no-scroll');
                }
            });

            // Advanced header scroll effect with performance optimization
            let lastScrollTop = 0;
            let ticking = false;
            const header = document.querySelector('.header');
            const navDesktop = document.querySelector('.nav-desktop');
            const topBarHeight = 38;

            function updateHeaderOnScroll() {
                const scrollTop = window.pageYOffset || document.documentElement.scrollTop;

                // Add/remove shadow based on scroll
                if (scrollTop > 10) {
                    header.style.boxShadow = '0 4px 30px rgba(0, 0, 0, 0.1)';
                } else {
                    header.style.boxShadow = 'var(--shadow-md)';
                }

                // Show/hide header on scroll with threshold
                if (scrollTop > lastScrollTop && scrollTop > 100) {
                    // Scrolling down - hide
                    header.classList.add('hidden');
                    if (navDesktop) navDesktop.classList.add('hidden');
                } else if (scrollTop < lastScrollTop || scrollTop <= 100) {
                    // Scrolling up - show
                    header.classList.remove('hidden');
                    if (navDesktop) navDesktop.classList.remove('hidden');
                }

                // Update active section in mobile nav
                updateMobileNavActiveState();

                lastScrollTop = scrollTop;
                ticking = false;
            }

            window.addEventListener('scroll', function() {
                if (!ticking) {
                    ticking = true;
                    requestAnimationFrame(updateHeaderOnScroll);
                }
            });

            // Active state for mobile bottom nav with improved logic
            function updateMobileNavActiveState() {
                const currentPath = window.location.pathname;
                const mobileNavLinks = document.querySelectorAll('.mobile-bottom a');

                mobileNavLinks.forEach(link => {
                    const href = link.getAttribute('href');
                    // Remove active class from all
                    link.classList.remove('active');

                    // Add active class based on current path
                    if (href === currentPath ||
                        (href === '/Cart' && currentPath.includes('Cart')) ||
                        (href === '/Account' && currentPath.includes('Account')) ||
                        (href === '/' && currentPath === '/')) {
                        link.classList.add('active');
                    }
                });
            }

            // Initialize mobile nav state
            updateMobileNavActiveState();

            // Close mobile dropdowns when clicking on body
            document.addEventListener('click', function(e) {
                const userDropdown = document.querySelector('.user-dropdown.show');
                const cartDropdown = document.querySelector('.cart-dropdown.show');

                if (userDropdown && !e.target.closest('.user-component-wrapper')) {
                    userDropdown.classList.remove('show');
                }

                if (cartDropdown && !e.target.closest('.cart-component-wrapper')) {
                    cartDropdown.classList.remove('show');
                }

                // Remove no-scroll class if all dropdowns are closed
                if (!userDropdown && !cartDropdown && !mobileSearchOverlay?.classList.contains('active')) {
                    document.body.classList.remove('no-scroll');
                }
            });

            // Close offcanvas when clicking on links
            const offcanvasLinks = document.querySelectorAll('#mobileMenu a');
            offcanvasLinks.forEach(link => {
                link.addEventListener('click', function(e) {
                    // Don't prevent default for external links
                    const offcanvas = bootstrap.Offcanvas.getInstance(document.getElementById('mobileMenu'));
                    if (offcanvas) {
                        offcanvas.hide();
                    }

                    // Add click animation
                    this.style.transform = 'scale(0.95)';
                    setTimeout(() => {
                        this.style.transform = '';
                    }, 200);
                });
            });

            // Mobile bottom nav click effects
            const mobileBottomLinks = document.querySelectorAll('.mobile-bottom a');
            mobileBottomLinks.forEach(link => {
                link.addEventListener('click', function(e) {
                    // Add ripple effect
                    const ripple = document.createElement('span');
                    const rect = this.getBoundingClientRect();
                    const size = Math.max(rect.width, rect.height);
                    const x = e.clientX - rect.left - size / 2;
                    const y = e.clientY - rect.top - size / 2;

                    ripple.style.cssText = `
                        position: absolute;
                        border-radius: 50%;
                        background: rgba(142, 68, 173, 0.3);
                        transform: scale(0);
                        animation: ripple 0.6s linear;
                        width: ${size}px;
                        height: ${size}px;
                        top: ${y}px;
                        left: ${x}px;
                        pointer-events: none;
                    `;

                    this.appendChild(ripple);
                    setTimeout(() => ripple.remove(), 600);
                });
            });

            // Add CSS for ripple animation
            const style = document.createElement('style');
            style.textContent = `
                @@keyframes ripple {
                    to {
                        transform: scale(4);
                        opacity: 0;
                    }
                }
            `;
            document.head.appendChild(style);

            // Initialize tooltips
            const tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'));
            const tooltipList = tooltipTriggerList.map(function (tooltipTriggerEl) {
                return new bootstrap.Tooltip(tooltipTriggerEl);
            });

            // Touch gesture for mobile
            let touchStartY = 0;
            document.addEventListener('touchstart', function(e) {
                touchStartY = e.touches[0].clientY;
            }, { passive: true });

            // Handle window resize with debouncing
            let resizeTimeout;
            window.addEventListener('resize', function() {
                clearTimeout(resizeTimeout);
                resizeTimeout = setTimeout(function() {
                    // Close all mobile dropdowns when resizing to desktop
                    if (window.innerWidth >= 992) {
                        closeAllMobileDropdowns();
                    }
                    // Update nav state on resize
                    updateMobileNavActiveState();
                }, 250);
            });

            // Performance: Preload critical images
            const criticalImages = document.querySelectorAll('img[data-src]');
            criticalImages.forEach(img => {
                img.src = img.dataset.src;
            });
        });

        // Global function to handle mobile dropdown close
        function closeAllMobileDropdowns() {
            // Close user dropdown
            document.querySelector('.user-dropdown')?.classList.remove('show');

            // Close cart dropdown
            document.querySelector('.cart-dropdown')?.classList.remove('show');

            // Close search overlay
            document.querySelector('.mobile-search-overlay')?.classList.remove('active');

            // Restore body scroll
            document.body.classList.remove('no-scroll');
        }

        // Smooth scroll to top
        function scrollToTop() {
            window.scrollTo({
